@CARDCAN_4547(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%




CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4547)
SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4547)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_발동数") != 0
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4547,"손패")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0

	RETURN 1
ENDIF


@CARDEFFECT_4547(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 破壊カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 失敗率
#DIM DYNAMIC 캐릭터_ID
#DIM DYNAMIC 攻撃力修正
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4547,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 2
		CALL CARD_SP_SUMMON(듀얼리스트, ゾーン, 場所)
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	캐릭터_ID = NO_TO_CHARANUM(4547)
	;素で80％くらいの失敗率があり、호감도分下がる。
	失敗率 = 8000 - CFLAG:캐릭터_ID:호감도
	IF 失敗率 >= 10000
		失敗率 = 10000
	ELSEIF 失敗率 <= 0
		失敗率 = 0
	ENDIF
	IF RAND:10000 + 1 >= 失敗率
		SETCOLOR C_GOLD
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTL
		PRINTFORML "하늘에 위성！　땅에 쇠사슬！　지금、내가 빛나는 순간이 왔다～！
		PRINTFORML 　　나는야 최고ーーー！！！……그렇죠？"
		PRINTL
		CUSTOMDRAWLINE ―
		RESETCOLOR
		攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",攻撃力修正)
	ELSE
		SETCOLOR C_GOLD
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTL
		PRINTFORML "앗、무리일것같아……아난와……히익！　혼내지 말아줘 마스터！　과정을 칭찬해줘！"
		PRINTL
		CUSTOMDRAWLINE ―
		RESETCOLOR
	ENDIF

	IF 듀얼리스트 == "자신" && ライフ_상대 <= GETVAR(@"%듀얼리스트%_MZ_攻:場所")
		캐릭터_ID = NO_TO_CHARANUM(4547)
		CALL EVENT_FAVUP(캐릭터_ID,1000)
		SETCOLOR C_GOLD
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTL
		PRINTFORML "내가、마무리……크으～～！！　칭찬해줘！　더 칭찬해줘！
		PRINTFORML 　　멋있는、호연작을 응원 잘부탁합니다！"
		PRINTL
		CUSTOMDRAWLINE ―
		RESETCOLOR
	ENDIF
ENDIF
