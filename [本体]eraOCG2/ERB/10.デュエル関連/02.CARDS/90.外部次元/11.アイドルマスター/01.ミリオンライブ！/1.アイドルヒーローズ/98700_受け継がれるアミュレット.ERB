@CARDNAME_98700,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 계승되는 아뮬렛
	CASE "略称"
		RESULTS = MS아뮬렛
	CASE "カテゴリ"
		RESULTS:0 = I•HERO
		RESULTS:1 = HERO
		RESULTS:2 = 밀리언 라이브!
		RESULTS:3 = 융합
ENDSELECT

