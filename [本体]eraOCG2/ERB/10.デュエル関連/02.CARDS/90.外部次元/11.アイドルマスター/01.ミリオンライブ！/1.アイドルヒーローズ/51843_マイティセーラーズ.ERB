@CARDCAN_51843(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51843)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,51843)
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = I•HERO
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF 발동済_2(듀얼리스트,51843)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_51843(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 選択数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51843,1)
	IF RESULT == 0
		FOR カウンタ,0,제외数(듀얼리스트)
			選択カードID = GETVAR(@"%듀얼리스트%_제외:{カウンタ}")
			SIF 選択カードID == -1
				CONTINUE
			TRYCALLFORM CARD_{選択カードID}("종류")
			SIF RESULT >= モン全般
				CONTINUE
			TRYCALLFORM CARDNAME_{選択カードID}("カテゴリ")
			SIF !MATCH(RESULTS,"I・HERO")
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"제외",カウンタ,덱行き)
			選択数++
		NEXT
		CALL FULLRESET
		효과条件他所 = 1
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지")
		IF 選択数 > 0
			CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"永攻",選択数*100)
			CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"永守",選択数*100)
			CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"個Ｃ",選択数)
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51843,2)
	IF RESULT == 0
		IF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") >= 3
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"個Ｃ",-3)
		ELSE
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,덱行き)
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = I•HERO
			효과条件固名前 = 아이돌 히어로 마이티 세일러 유리코
			효과条件レベル = 4 
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = I•HERO
				효과条件名前 = 아이돌 히어로 마이티 세일러 유리코
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"追戦",GETVAR(@"%듀얼리스트%_MZ_汎数:場所")-1)
ENDIF