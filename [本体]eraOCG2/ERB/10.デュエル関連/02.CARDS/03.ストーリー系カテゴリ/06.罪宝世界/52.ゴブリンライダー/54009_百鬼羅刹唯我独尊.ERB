@CARDCAN_54009(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54009)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,54009)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件Ｘ素所持 = 999
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_54009(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC カードID
#DIM DYNAMIC 효과횟수
#DIMS DYNAMIC カード名
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54009,1)
	IF RESULT == 0
		IF ターンプレイヤー == 듀얼리스트
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 고블린
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			효과횟수 = RESULT

			CALL FULLRESET
			효과範囲필드 = 1
			효과条件Ｘ素所持 = 999
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL CARD_SELECT(듀얼리스트,選択カード)
				選択カード = RESULT
				CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"Ｘ",-1)
			ENDIF
			REPEAT 효과횟수
				CALL FULLRESET
				효과条件표시 = 表側표시
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"リリース")
				SIF RESULT == 1
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",1)
			REND
		ELSEIF ターンプレイヤー == 対面者
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 고블린
			효과条件종류 = 엑시즈
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			효과횟수 = RESULT

			CALL FULLRESET
			효과範囲필드 = 1
			효과条件Ｘ素所持 = 999
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL CARD_SELECT(듀얼리스트,選択カード)
				選択カード = RESULT
				CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"Ｘ",-1)
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件Ｘ素所持 = 999
				CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					CALL CARD_SELECT(듀얼리스트,選択カード)
					選択カード = RESULT
					CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"Ｘ",-1)
					CALL FULLRESET
					효과範囲필드 = 1
					효과条件Ｘ素所持 = 999
					CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
					選択カード = RESULT
					IF 選択カード != 9999
						CALL CARD_SELECT(듀얼리스트,選択カード)
						選択カード = RESULT
						CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"Ｘ",-1)
						REPEAT 효과횟수
							CALL FULLRESET
							효과条件표시 = 表側표시
							CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"リリース")
						REND
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF




