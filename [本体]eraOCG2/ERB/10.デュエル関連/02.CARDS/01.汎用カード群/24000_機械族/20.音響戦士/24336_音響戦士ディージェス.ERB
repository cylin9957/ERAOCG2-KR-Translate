@CARDNAME_24336,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 사운드 워리어 디제이스
	CASE "略称"
		RESULTS = 디제이스
	CASE "カテゴリ"
		RESULTS:0 = 사운드 워리어
ENDSELECT


@CARD_24336(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1200
	CASE "守備力"
		RETURN 1200
	CASE "分割"
		RETURN 펜듈럼
	CASE "추가日"
		RETURN 250914
ENDSELECT

RETURN 0

