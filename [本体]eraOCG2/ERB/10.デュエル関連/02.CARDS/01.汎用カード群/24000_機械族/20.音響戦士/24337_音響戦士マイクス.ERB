@CARDCAN_24337(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,4

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24337)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,24337)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件分割 = 펜듈럼
	효과条件표시 = 表側표시
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件종류 = EX以外全般
	CALLFORM 효과条件レベル_ADV(6,"以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 사운드 워리어
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	
	SIF 마함数(듀얼리스트) >= 5
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 사운드 워리어 기타스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1 && 듀얼리스트 != "자신"
		발동불가:0 = 1
	
	CALL CARD_SS_CHECK(듀얼리스트,24337,ゾーン)
	SIF RESULT == 1
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 사운드 카운터
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT:9 < 4
		발동불가:1 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時強制 || 종류 == 특수소환時強制
	SIF 발동済_4(듀얼리스트,24337)
		RETURN 0
	RETURN 1

ELSEIF 종류 == 短紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_24337(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 발동불가,4
#DIM DYNAMIC 条件달성

IF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24337,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲EX덱 = 1
		효과条件종류 = EX以外全般
		CALLFORM 효과条件レベル_ADV(6,"以下")
		효과条件複数 = 98
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24337)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과範囲EX덱 = 1
		효과条件カテゴリ = 사운드 워리어
		효과条件종류 = モン全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 손패起動
	SIF 마함数(듀얼리스트) >= 5
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 사운드 워리어 기타스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1 && 듀얼리스트 != "자신"
		발동불가:0 = 1
	
	CALL CARD_SS_CHECK(듀얼리스트,24337,ゾーン)
	SIF RESULT == 1
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 사운드 카운터
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT:9 < 4
		발동불가:1 = 1
	
	IF 발동불가:0 != 1 && 발동불가:1 != 1
		CALL YN_CHOICE(듀얼리스트,"이 카드를 마법＆함정 존에 앞면 표시로 둔다。","①：사운드 카운터를 제거하고 이 카드를 특수 소환한다。")
		SIF 듀얼리스트 != "자신"
			RESULT = 1
	ELSEIF 발동불가:0 != 1
		RESULT = 0
	ELSEIF 발동불가:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24337)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		ENDIF
	
	ELSEIF RESULT == 1
		REPEAT 4
			CALL FULLRESET
			효과範囲마함 = 1
			효과条件カテゴリ = 사운드 카운터
			효과条件個Ｃ所持 = 999
			CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"個Ｃ",-1)
			SIF RESULT == 1
				条件달성++
		REND
		SIF 条件달성 != 4
			RETURN 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 소환時強制 || 종류 == 특수소환時強制
	CALL CARD_EFFECT_USE(듀얼리스트,24337,4)
	CALL CARD_RESERV(듀얼리스트,24337,短紋章予約)

ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	CALL STATCHANGE_HAND(듀얼리스트,"全体",場所,"召可")
ENDIF

