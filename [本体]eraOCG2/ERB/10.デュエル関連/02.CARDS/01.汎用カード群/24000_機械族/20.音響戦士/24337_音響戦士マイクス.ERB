ENDSELECT


@CARD_24337(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 5
	CASE "攻撃力"
		RETURN 2300
	CASE "守備力"
		RETURN 1100
	CASE "分割"
		RETURN 펜듈럼
	CASE "추가日"
		RETURN 250914
ENDSELECT

RETURN 0

