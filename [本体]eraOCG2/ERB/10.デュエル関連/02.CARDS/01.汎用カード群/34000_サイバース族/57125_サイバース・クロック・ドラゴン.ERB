@CARDSUMMON_57125(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 99
素材条件数自由 = 1
素材条件素材数起動 = 1

IF EX参照 == 0 || EX参照 == 1
	素材条件名前 = 클락 와이반
ELSEIF EX参照 >= 10
	素材条件종류 = 링크
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,57125) 
	RETURN RESULT
ENDIF

@CARDCAN_57125(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57125)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX소환時
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 링크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF !GROUPMATCH(ゾーン,"필드")
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지
	SIF 処理中_듀얼리스트 == 듀얼리스트
		RETURN 0
	SIF !GROUPMATCH(묘지送り종류,"破壊","リリース")
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_57125(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード,100
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択数
#DIM DYNAMIC 選択レベル
IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57125)
	IF RESULT == 0

		素材数 = GETVAR(@"%듀얼리스트%_MZ_汎数:場所") - 1

		CALL FULLRESET
		효과条件종류 = 링크
		효과条件複数 = 100 - 素材数
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)	
		FOR カウンタ,0,10
			選択カード:カウンタ = RESULT:カウンタ
		NEXT
		IF 選択カード != 9999
			選択数 = RESULT:100
			FOR カウンタ,0,選択数
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_묘지:(選択カード:カウンタ)")}, "レベル"
				選択レベル += RESULT
			NEXT

			攻撃力修正 = 選択レベル * 1000
			CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",選択レベル)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",攻撃力修正)

			CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"単攻",1)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件他所 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")

	CALL FULLRESET
	효과条件他所 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"攻避")

ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57125)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 마법全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF



