@CARDNAME_29131,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 아티팩트－베갈타
	CASE "略称"
		RESULTS = ＡＦ베갈타
	CASE "カテゴリ"
		RESULTS:0 = 아티팩트
ENDSELECT


@CARD_29131(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 천사족
	CASE "レベル"
		RETURN 5
	CASE "攻撃力"
		RETURN 1400
	CASE "守備力"
		RETURN 2100
	CASE "추가日"
		RETURN 250912
ENDSELECT
RETURN 0

