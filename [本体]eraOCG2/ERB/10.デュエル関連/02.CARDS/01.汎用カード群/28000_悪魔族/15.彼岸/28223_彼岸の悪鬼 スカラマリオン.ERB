@CARDNAME_28223,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 피안의 악귀 스칼라마리온
	CASE "略称"
		RESULTS = 스칼라마리온
	CASE "カテゴリ"
		RESULTS:0 = 피안
ENDSELECT


@CARD_28223(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 800
	CASE "守備力"
		RETURN 2000
	CASE "추가日"
		RETURN 250915
ENDSELECT

RETURN 0

@CARD_EXPLANATION_28223(종류)
#DIM DYNAMIC 종류
PRINTL このカード名の①③の효과はそれぞれ１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①：자신フィールドに마법・함정カードが存在しない場合に발동できる。
PRINTL このカードを손패から특수소환する。
CALLFORM CARD_ABLE(0,상황確認)
PRINTL ②：자신フィールドに「피안」モンスター以外の表側표시モンスターが存在する場合にこのカードは破壊される。
CALLFORM CARD_ABLE(3,필드→묘지 ,손패→묘지 ,덱→묘지 ,破壊→묘지 ,戦闘→묘지,X素材時효과)
PRINTL ③：このカードが묘지へ送られた場合に발동できる。
PRINTL 덱から「피안의 악귀 그래바스니치」以外の악마족・어둠속성・レベル３モンスター１体を손패に加える。

@CARDCAN_28223(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28223)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,28223)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,28223,ゾーン)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 상황確認
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_破耐:場所") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件固カテゴリ = 피안
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

;GROUPMMATCH(確認したい変数,　←と == な値)
ELSEIF GROUPMATCH(종류,필드→묘지,손패→묘지 ,덱→묘지 ,破壊→묘지 ,戦闘→묘지,X素材時효과)
	SIF 발동済_3(듀얼리스트,28223)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件속성 = 어둠속성
	효과条件종족 = 악마족
	효과条件レベル = 3
	효과条件固名前 = 피안의 악귀 스칼라마리온
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_28223(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28223,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 상황確認
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)

ELSEIF GROUPMATCH(종류,필드→묘지,손패→묘지 ,덱→묘지 ,破壊→묘지 ,戦闘→묘지,X素材時효과)
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28223,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件속성 = 어둠속성
		효과条件종족 = 악마족
		효과条件レベル = 3
		효과条件固名前 = 피안의 악귀 그래바스니치
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
