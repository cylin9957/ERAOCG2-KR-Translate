#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ

CALL RESETCONDITION_MAT
必要素材数 = 99
素材条件数自由 = 1
素材条件素材数起動 = 1

IF EX参照 == 0 || EX参照 == 1
	素材条件名前 = 암흑계의 마신왕 레인
ELSEIF EX参照 >= 10
	素材条件종족 = 악마족
ENDIF


IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,54016)
	;RETURN RESULT
	RETURN 0
ENDIF

@CARD_EXPLANATION_54016(종류)
#DIM DYNAMIC 종류

PRINTL 「암흑계의 마신왕 레인」＋악마족モンスター１体以上
PRINTL このカード名の①③の효과はそれぞれ１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(1,EX소환時)
PRINTL ①：このカードが융합소환した場合に발동できる。상대フィールドのカードを全て破壊する。
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ②：このカードの攻撃力・守備力は、このカードの융합素材としたモンスターの数×１０００になる。
CALLFORM CARD_ABLE(2,필드起動,フリー誘発)
PRINTL ②：자신・상대ターンに발동できる。
PRINTL 자신の손패を１枚選んで捨てる。자신フィールドの表側표시カードはターン終了時まで대상耐性を得る。


@CARDCAN_54016(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54016)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,54016)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,54016)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 손패数(듀얼리스트) == 0
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_54016(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 素材数
#DIM DYNAMIC ダメージ量

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54016,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_REMOVAL_ADV(듀얼리스트,"全体除去",場所,"묘지")
	ENDIF
ELSEIF 종류 == 攻守変動
	素材数 = GETVAR(@"%듀얼리스트%_MZ_汎数:場所")
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,素材数*1000,素材数*1000)
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54016,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐",1)
			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐",1)
		ENDIF
	ENDIF
ENDIF


