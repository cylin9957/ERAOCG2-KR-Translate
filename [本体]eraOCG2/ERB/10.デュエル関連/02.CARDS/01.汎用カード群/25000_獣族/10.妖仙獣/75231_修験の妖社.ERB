@CARDNAME_75231,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 수험의 요사
	CASE "略称"
		RESULTS = 수험의 요사
	CASE "カテゴリ"
		RESULTS:0 = 요선수
ENDSELECT


@CARD_75231(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 지속마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_75231(종류)
#DIM DYNAMIC 종류

PRINTL このカード名はルール上「요선수」カードとしても扱う。
CALLFORM CARD_ABLE(0,지속효과)
PRINT ①：자신ターンの間、상대は자신フィールドの「요선수」モンスターを효과の대상にできない。
CALLFORM CARD_ABLE(0,소환強制誘発)
PRINTL ②：このカードが마법＆함정ゾーンに存在する限り、
PRINTL 「요선수」モンスターが소환・특수소환される度に、このカードに個別카운터を１つ置く。
CALLFORM CARD_ABLE(10,마함起動)
PRINTL ③：１ターンに１度、このカードの個別카운터を任意の個数取り除いて발동할 수 있다。
PRINTL 取り除いた数によって以下の효과を適用する。
PRINTL ●１つ：자신フィールドの「요선수」モンスターの攻撃力はターン終了時まで３００アップする。
PRINTL ●３つ：자신の덱・묘지から「요선수」カード１枚を選んで손패に加える。

@CARDCAN_75231(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,75231)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン == "마함"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 1
		RETURN 0
	IF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 3
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 요선수
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF 最終소환決者 != 듀얼리스트
		RETURN 0
	SIF 最終소환타입 == ""
		RETURN 0
	CALLFORM CARDNAME_{最終소환ID}("カテゴリ") 
	SIF !MATCH(RESULTS,"요선수")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_75231(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC 選択

IF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 요선수
	효과条件종류 = モン全般
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ELSEIF  종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75231,10)
	IF RESULT == 0
		;場に요선수がなければ強化효과は使えない
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 요선수
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:0 = 1
		;카운터が３つ以上なければサーチ효과は使えない
		SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 3
			발동불가:1 = 1
		;덱or묘지に요선수がなければサーチ효과は使えない
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 요선수
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:1 = 1

		IF 듀얼리스트 == "자신" && (발동불가:0 == 0 || 발동불가:1 == 0)
			PRINTFORML 個別카운터を何個取り除きますか？（現在の個別카운터{GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所")}個）
			SIF 발동불가:0 == 0
				PRINTL [0] ●１つ：자신フィールドの「요선수」モンスターの攻撃力はターン終了時まで３００アップする。
			SIF 발동불가:1 == 0
				PRINTL [1] ●３つ：자신の덱・묘지から「요선수」カード１枚を選んで손패に加える。
			BINPUT
		ENDIF
		IF RESULT == 1 || (듀얼리스트 == "상대" && 발동불가:1 == 0)
			CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",-3)
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 요선수
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF RESULT == 0 || (듀얼리스트 == "상대" && 발동불가:0 == 0)
			CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",-1)
			효과条件カテゴリ = 요선수
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"一攻",300)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75231,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 소환強制誘発
	PRINTFORML 수험의 요사に카운터が乗りました。
	CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",1)
ENDIF