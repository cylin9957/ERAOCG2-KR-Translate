@CARDCAN_1772(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1772)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件固名前 = 우사미미 도사
 	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,2)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	IF 듀얼리스트 == "자신"
		효과範囲필드 = 1
	ENDIF
	효과範囲상대필드 = 1
	효과条件悪Ｃ所持 = 999
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1772(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 대상者


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1772)
	IF RESULT == 0
		選択カード = 効後_設場所:(処理中番号 - 1) 
		대상者 = %効後_実行者:(処理中番号 - 1)%

		CALL FULLRESET
		효과추가종류 = 10
		CALL CARD_REMOVAL_BASIC(대상者,"自動処理",選択カード,"悪Ｃ")
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1772,10)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き,1)

		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과추가종류 = 1
		효과条件悪Ｃ所持 = 999
		CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"제외")
	ENDIF
ENDIF
