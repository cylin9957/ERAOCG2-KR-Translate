@CARDSUMMON_AA_1771


@CARDCAN_1771(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1771)
SIF RESULT == 1
	RETURN 0

;P
IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	IF 듀얼리스트 != "자신"
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件名前 = 마계극단－코믹 릴리프
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 마함起動
	발동불가:0 = 0
	발동불가:1 = 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0

	;(1)
	SIF 발동済_1(듀얼리스트,1771)
		발동불가:0 = 1

	CALL FULLRESET
	효과範囲마함 = 1
	효과条件分割 = 펜듈럼
	효과条件固名前 = 마계극단－코믹 릴리프
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 마계극단
	효과条件分割 = 펜듈럼
	효과条件종류 = EX以外全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	
	;(2)
	SIF 발동済_2(듀얼리스트,1771)
		발동불가:1 = 1
	SIF モンスター数(対面者) < 1
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 마계극단
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	SIF モンスター数(듀얼리스트) >= 5 && モンスター数(対面者) >= 5
		발동불가:1 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1

;M
ELSEIF 종류 == ターン開始時強制
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF モンスター数(対面者) >= 5
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1771(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC 観客
#DIM DYNAMIC 演者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;P
IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1771)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 마함起動
	발동불가:0 = 0
	발동불가:1 = 0

	;(1)
	SIF 발동済_1(듀얼리스트,1771)
		발동불가:0 = 1
	SIF モンスター数(듀얼리스트) >= 5
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件分割 = 펜듈럼
	효과条件固名前 = 마계극단－코믹 릴리프
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 마계극단
	효과条件分割 = 펜듈럼
	효과条件종류 = EX以外全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	;(2)
	SIF 발동済_2(듀얼리스트,1771)
		발동불가:1 = 1
	SIF モンスター数(対面者) < 1
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 마계극단
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	SIF モンスター数(듀얼리스트) >= 5 && モンスター数(対面者) >= 5
		발동불가:1 = 1
	
	IF 발동불가:0 == 0 && 발동불가:1 == 0
		SIF 듀얼리스트 == "자신"
			PRINTL 효과를 선택해주십시오
		CALL YN_CHOICE(듀얼리스트,"●モンスターを특수소환する","●コントロールを入れ替える")
	ELSEIF 발동불가:0 == 1
		RESULT = 1
	ELSEIF 발동불가:1 == 1
		RESULT = 0
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1771,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲EX덱 = 1
			효과条件カテゴリ = 마계극단
			효과条件分割 = 펜듈럼
			효과条件종류 = EX以外全般
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

			CALL FULLRESET
			효과範囲마함 = 1
			효과条件名前 = 마계극단－멜로 마돈나
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1 && モンスター数(듀얼리스트) < 5
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲EX덱 = 1
				효과条件カテゴリ = 마계극단
				효과条件分割 = 펜듈럼
				효과条件종류 = EX以外全般
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1771,2)
		IF RESULT == 0
			CALL FULLRESET
			;효과範囲상대필드 = 1
			;CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대필드",ゾーン,場所)
			観客 = RESULT

			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 마계극단
			효과条件分割 = 펜듈럼
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			演者 = RESULT
			
			IF 観客 != 9999 && 演者 != 9999
				CALL FULLRESET
				IF モンスター数(듀얼리스트) >= 5
					;상대奪い
					CALL FULLRESET
					CALL CARD_GET_CONTROL(対面者,演者)
					;자신奪い
					CALL FULLRESET
					CALL CARD_GET_CONTROL(듀얼리스트,観客)
				ELSEIF モンスター数(対面者) >= 5
					;자신奪い
					CALL FULLRESET
					CALL CARD_GET_CONTROL(듀얼리스트,観客)
					;상대奪い
					CALL FULLRESET
					CALL CARD_GET_CONTROL(対面者,演者)
				ELSE
					;자신奪い
					CALL FULLRESET
					CALL CARD_GET_CONTROL(듀얼리스트,観客)
					;상대奪い
					CALL FULLRESET
					CALL CARD_GET_CONTROL(対面者,演者)
				ENDIF
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
			ENDIF
		ENDIF
	ENDIF
	

;モンスター효과ーーーーーーーーーーーーーーーーーーーーーーーーー
ELSEIF 종류 == ターン開始時強制
	CALL FULLRESET
	CALL CARD_GET_CONTROL(対面者,場所)

	CALL FULLRESET
	효과範囲마함 = 1
	효과条件行先플래그 = 破壊行き
	효과条件任意 = 1
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)

ELSEIF 종류 == 攻撃時強制誘発
	CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ無効",3)
ENDIF


