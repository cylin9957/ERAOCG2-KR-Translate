@CARDNAME_82056,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래곤메이드의 정리정돈
	CASE "略称"
		RESULTS = 드메 정리정돈
	CASE "カテゴリ"
		RESULTS:0 = 드래곤메이드
ENDSELECT


@CARD_82056(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常함정
ENDSELECT

RETURN 0

