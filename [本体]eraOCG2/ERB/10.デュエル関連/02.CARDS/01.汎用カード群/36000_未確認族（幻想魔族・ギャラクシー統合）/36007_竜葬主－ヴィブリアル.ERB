@CARDCAN_36007(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 戦闘종족

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,36007)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"リリース",1)
	SIF RESULT != 1
		RETURN 0

	IF ゾーン == "손패"
		SIF 발동済_1(듀얼리스트,36007)
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,36007,ゾーン)
		SIF RESULT == 1
			RETURN 0

	ELSEIF ゾーン == "필드"
		SIF 발동済_2(듀얼리스트,36007)
			RETURN 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件除去種 = 永攻DOWN
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	
	ELSE
		RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_36007(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戦闘カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36007,1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF

	ELSEIF ゾーン == "필드"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36007,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과추가종류 = 12
			CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"永攻DOWN",1500)
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(듀얼리스트,1),"戦耐")
ENDIF
