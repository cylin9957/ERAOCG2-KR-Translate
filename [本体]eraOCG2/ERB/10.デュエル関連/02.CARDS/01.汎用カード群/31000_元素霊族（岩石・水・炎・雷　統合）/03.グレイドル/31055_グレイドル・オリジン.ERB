@CARDCAN_31055(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과使用불가,3

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31055)
SIF RESULT == 1
	RETURN 0

;戦闘破壊時의 효과
;参考：ゴ-ルド 가제트、미캉코の誘い輪舞
IF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
    ;カード名ターン1等は無いから기생先があるかだけチェック
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_31055(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC セット先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
    ;발동チェック
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31055,1)
	IF RESULT == 0
        CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
        セット先 = カード설치先
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과추가종류 = 130 + セット先
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		CALL SET_FIELD_INFO(듀얼리스트,"마함",セット先,"装",コントロール先,1)
	ENDIF
ENDIF