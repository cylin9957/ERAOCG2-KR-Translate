	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 사이킥족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 2800
	CASE "守備力"
		RETURN 1200
	CASE "성별"
		RETURN 牝性
	CASE "連動ID"
		SELECTCASE RAND:2
			CASE 0
				RESULT:1 = 2300
				RETURN 2335
			CASE 1
				RESULT:1 = 2335
				RETURN 2300
		ENDSELECT
	CASE "추가日"
		RETURN 250810
ENDSELECT
RETURN 0

