	CASE "名前"
		RESULTS = N 글로모스
	CASE "略称"
		RESULTS = N 모스
	CASE "カテゴリ"
		RESULTS:0 = 네오 스페이시언
		RESULTS:1 = 네오스
ENDSELECT


@CARD_38028(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 전사족 ;Nは全部戦士に
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 300
	CASE "守備力"
		RETURN 900
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

