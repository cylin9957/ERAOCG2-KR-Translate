@CARDNAME_21422,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 성각룡－아세트 드래곤
	CASE "略称"
		RESULTS = 성각－아세트
	CASE "カテゴリ"
		RESULTS:0 = 성각
ENDSELECT


@CARD_21422(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 5
	CASE "攻撃力"
		RETURN 1900
	CASE "守備力"
		RETURN 1200
	CASE "추가日"
		RETURN 250914
ENDSELECT

RETURN 0

@CARD_EXPLANATION_21422(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,효과소환)
PRINTL ①：このカードはリリースなしで소환できる。この方法で소환したこのカードのレベルは６になり、元々の攻撃力は１０００になる。
CALLFORM CARD_ABLE(10,필드起動)
PRINTL ②：１ターンに１度、フィールド上の드래곤족の通常モンスター１体を選択して발동できる。
PRINTL 자신フィールドの「성각」モンスターのレベルはエンドフェイズ時まで選択したモンスターと同じレベルになる。
CALL CARD_ABLE(0,필드→묘지,X素材時효과)
PRINTL ③：このカードがリリースされた場合、またはX素材に使用された場合に발동できる。
PRINTL 자신の손패・덱・묘지から드래곤족の通常モンスター１体を選び、攻撃力・守備力を０にして특수소환する。
PRINTL そのカードのレベルを６にしても良い。

@CARDCAN_21422(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21422)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환
	SIF モンスター数(듀얼리스트) == 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動 || 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 드래곤족
	효과条件종류 = 通常モン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == X素材時효과
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件종족 = 드래곤족
	효과条件종류 = 通常モン
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21422(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 설정レベル 

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL SET_FIELD_INFO(듀얼리스트,"필드",現필드(듀얼리스트),"条達",2,1)
	RETURN 1
ELSEIF 종류 == 攻守変動
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,-900)
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一星",6,1)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21422,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족 = 드래곤족
		효과条件종류 = 通常モン
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			설정レベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード")
			CALL FULLRESET
			효과条件カテゴリ = 성각
			효과条件종류 = レベル持ち
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"一星",설정レベル)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == X素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21422)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		PRINTL レベルを６にしますか？
		CALL YN_CHOICE(듀얼리스트)
		IF RESULT == 0
			효과추가종류:1 = 140 + 6
		ENDIF
		효과条件종족 = 드래곤족
		효과条件종류 = 通常モン
		효과추가종류 = 効追攻守０
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
	ENDIF
ENDIF
