@CARD_EXPLANATION_21422(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,효과소환)
PRINTL ①：이 카드는 릴리스 없이 소환할 수 있다。이 방법으로 소환한 이 카드의 레벨은 ６이 되며、원래 공격력은 １０００이 된다。
CALLFORM CARD_ABLE(10,필드起動)
PRINTL ②：１턴에 １번、필드 위의 드래곤족 일반 몬스터 １장을 선택하고 발동할 수 있다。
PRINTL 자신 필드의 "성각" 몬스터의 레벨은 엔드 페이즈 시까지 선택한 몬스터와 같은 레벨이 된다。
CALL CARD_ABLE(0,필드→묘지,X素材時효果)
PRINTL ③：이 카드가 릴리스된 경우、또는 X소재로 사용된 경우에 발동할 수 있다。
PRINTL 자신의 패 / 덱 / 묘지에서 드래곤족 일반 몬스터 １장을 골라、공격력 / 수비력을 ０으로 하고 특수 소환한다。
PRINTL 그 카드의 레벨을 ６으로 할 수 있다。

@CARDCAN_21422(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21422)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환
	SIF モンスター数(듀얼리스트) == 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動 || 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 드래곤족
	효과条件종류 = 通常モン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == X素材時효과
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件종족 = 드래곤족
	효과条件종류 = 通常モン
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21422(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 설정レベル 

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL SET_FIELD_INFO(듀얼리스트,"필드",現필드(듀얼리스트),"条達",2,1)
	RETURN 1
ELSEIF 종류 == 攻守変動
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,-900)
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一星",6,1)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21422,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족 = 드래곤족
		효과条件종류 = 通常モン
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			설정レベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード")
			CALL FULLRESET
			효과条件カテゴリ = 성각
			효과条件종류 = レベル持ち
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"一星",설정レベル)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == X素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21422)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		PRINTL 레벨을 ６으로 하시겠습니까？
		CALL YN_CHOICE(듀얼리스트)
		IF RESULT == 0
			효과추가종류:1 = 140 + 6
		ENDIF
		효과条件종족 = 드래곤족
		효과条件종류 = 通常モン
		효과추가종류 = 効追攻守０
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
	ENDIF
ENDIF
