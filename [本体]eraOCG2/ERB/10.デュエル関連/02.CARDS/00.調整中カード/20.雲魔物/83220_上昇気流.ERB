@CARDNAME_83220,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 상승기류
	CASE "略称"
		RESULTS = 상승기류
	CASE "カテゴリ"
		RESULTS:0 = 운마물
ENDSELECT


@CARD_83220(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_83220(종류)
#DIM DYNAMIC 종류
PRINTL このカード名の①②の효과は１ターンに１度、いずれか１つしか使用できない。
CALLFORM CARD_ABLE(1,마함起動,フリー誘発)
PRINTL ①：フィールド上に存在する「운마물」モンスターのフォッグ카운터を全て取り除いて발동する。
PRINTL 取り除いたフォッグ카운터の数×３００ポイントダメージを상대ライフに与える。
PRINTL こうして取り除いたフォッグ카운터４つにつき、자신の덱からカードを１枚ドローする。
CALLFORM CARD_ABLE(2,묘지起動,フリー誘発)
PRINTL ②：묘지のこのカードを제외して발동できる。
PRINTL 자신の묘지から「운마물」モンスター１体を특수소환する、
PRINTL その後、자신フィールドの「운마물」モンスター１体に자신の묘지の通常モンスターの数だけフォッグ카운터を置く。


@CARDCAN_83220(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,83220)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,83220)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 운마물
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT:9 < 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 발동済_2(듀얼리스트,83220)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 운마물
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_83220(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 消費カウンタ
#DIM DYNAMIC 与ダメージ 
#DIM DYNAMIC ドロー枚数
IF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,83220,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:カウンタ") == 0
				CONTINUE
			消費カウンタ += GETVAR(@"%듀얼리스트%_MZ_個Ｃ:カウンタ")
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"個Ｃ",0,1)
		NEXT
		与ダメージ = 消費カウンタ * 300
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과", 与ダメージ,1)
		ドロー枚数 = 消費カウンタ / 4
		CALL CARDDRAW_BASIC(듀얼리스트,ドロー枚数)	
	ENDIF
ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,83220,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 운마물
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과条件カテゴリ = 운마물
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종류 = 通常モン	
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"魔Ｃ",RESULT)
		ENDIF
	ENDIF
ENDIF
