VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 시무르그의 열전
	CASE "略称"
		RESULTS = 시무르그의 열전
	CASE "カテゴリ"
		RESULTS:0 = 시무르그
ENDSELECT


@CARD_92615(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
	CASE "추가日"
		RETURN 250917
ENDSELECT

RETURN 0

@CARD_EXPLANATION_92615(종류)
#DIM DYNAMIC 종류

PRINTL このカード名の②の효과は１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①：자신フィールドの비행야수족モンスターの内、
PRINTL 攻撃力が一番高い비행야수족モンスター以外の비행야수족モンスターは、
PRINTL 攻撃대상にならず、상대の효과の대상にもならない。
CALLFORM CARD_ABLE(2,마함起動,フリー誘発)
PRINTL ②：자신フィールドの、
PRINTL レベルが７以上で속성が異なる「시무르그」モンスター２体とこのカードを묘지へ送って발동できる。
PRINTL フィールドのカードを全て持ち主の손패に戻し、자신は손패に戻した数×５００のダメージを受ける。
PRINTL その後、자신が受けたダメージと同じ数値分のダメージを상대に与える。

@CARDCAN_92615(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92615)
SIF RESULT == 1
	RETURN 0

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF (종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1) || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,92615)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF 듀얼리스트 != "자신"
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 어둠속성
	효과条件カテゴリ = 시무르그
	CALLFORM 효과条件レベル_ADV(7,"以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 시무르그
	CALLFORM 효과条件レベル_ADV(7,"以上")
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2	
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_92615(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ダメージ修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF (종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1) || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92615,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件속성 = 어둠속성
		효과条件カテゴリ = 시무르그
		CALLFORM 효과条件レベル_ADV(7,"以上")
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件속성 = 바람속성
			효과条件カテゴリ = 시무르그
			CALLFORM 효과条件レベル_ADV(7,"以上")
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				FOR カウンタ,0,5
					SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
						CONTINUE
					SIF GETVAR(@"%듀얼리스트%_MZ_함정耐:カウンタ") >= 1
						CONTINUE
					SIF GETVAR(@"%듀얼리스트%_MZ_無差耐:カウンタ") >= 1
						CONTINUE
					CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ,손패行き)
					ダメージ修正 ++
				NEXT
				FOR カウンタ,0,5
					SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
						CONTINUE
					SIF GETVAR(@"%듀얼리스트%_魔_함정耐:カウンタ") >= 1
						CONTINUE
					SIF GETVAR(@"%듀얼리스트%_魔_無差耐:カウンタ") >= 1
						CONTINUE
					CALL CARD_DISPOSE(듀얼리스트,"마함",カウンタ,손패行き)
					ダメージ修正 ++
				NEXT
				FOR カウンタ,0,5
					SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
						CONTINUE
					SIF GETVAR(@"%対面者%_MZ_함정耐:カウンタ") >= 1
						CONTINUE
					SIF GETVAR(@"%対面者%_MZ_無差耐:カウンタ") >= 1
						CONTINUE
					CALL CARD_DISPOSE(対面者,"필드",カウンタ,손패行き)
					ダメージ修正 ++
				NEXT
				FOR カウンタ,0,5
					SIF GETVAR(@"%対面者%_마함:カウンタ") == -1
						CONTINUE
					SIF GETVAR(@"%対面者%_魔_함정耐:カウンタ") >= 1
						CONTINUE
					SIF GETVAR(@"%対面者%_魔_無差耐:カウンタ") >= 1
						CONTINUE
					CALL CARD_DISPOSE(対面者,"마함",カウンタ,손패行き)
					ダメージ修正 ++
				NEXT

				ダメージ修正 = ダメージ修正 * 500
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ修正)
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ修正,1)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_種:カウンタ") != 비행야수족
			CONTINUE
		SIF 攻撃力修正 < GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
			攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
	NEXT
	CALL FULLRESET
	효과条件종족 = 비행야수족
	효과条件攻撃力 = 攻撃力修正 - 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"攻避")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")

ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92615)
	IF RESULT == 0
	ENDIF
ENDIF
