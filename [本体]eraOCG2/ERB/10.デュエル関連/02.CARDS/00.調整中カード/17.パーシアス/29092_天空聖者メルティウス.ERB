CALLFORM CARD_ABLE(2,발동誘発)
PRINTL ②：자신 필드가 "천공의 성역"이고 "천공성자 메르티우스" 이외의 "파샤스" 몬스터가 존재하는 상태에서,
PRINTL 상대가 카드의 효과를 발동한 경우, 필드 / 묘지의 이 카드를 제외하고 발동할 수 있다.
PRINTL 자신 필드의 모든 카드는 이 체인의 효과 처리 동안만 대상 내성을 얻는다.

;どうみても女の子モンスターっぽい名前なので牝性モンスターとする。(苦しい言い訳)
;ミネルヴァと同様、こいつも直接的にテーマ展開に繋がるサーチやリクルート효과を持っているわけではないので덱への採用枚数は要検討。
;ただ、初動となるサーチ・リクルート효과を持たないぶん、①②の효과は상황を選ぶがちゃんと強い효과が書かれている。
;①は通常함정カードの효과발동のついでに상대盤面のカードを割るという효과。②は『キマイラ』を参考にした擬似대상耐性효과であり、
;どちらも【파샤스】の基本的な初動カードのみで展開した時の盤面で弱点になりうる部分を補う효과となっている。
;とはいえ採用枚数はまあ１枚あれば十分かと思う。CPU덱で採用枚数０枚なのは弱いわけではなく、②の효과を使いこなすのがCPUには難しいため。


@CARDSUMMON_AA_29092


@CARDCAN_29092(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29092)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,29092)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVARS(@"%듀얼리스트%_フィールド名") != "천공의 성역"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 通常함정
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件除去種 = 묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,29092)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"필드","묘지")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF GETVARS(@"%듀얼리스트%_フィールド名") != "천공의 성역"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 파샤스
	효과条件固名前 = 천공성자 메르티우스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_29092(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM 손패選択
#DIM 選択カード
#DIM DYNAMIC 攻守修正値


IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29092,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"묘지")
		IF RESULT == 1
			CALL FULLRESET
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",1000)
		ENDIF
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29092,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き)
		IF RESULT == 1
			CALL FULLRESET
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐",6)
			CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐",6)
		ENDIF
	ENDIF
ENDIF
