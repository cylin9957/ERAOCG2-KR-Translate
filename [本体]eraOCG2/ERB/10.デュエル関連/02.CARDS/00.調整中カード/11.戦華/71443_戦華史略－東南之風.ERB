#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 전황사략－동남지풍
	CASE "略称"
		RESULTS = 동남지풍
	CASE "カテゴリ"
		RESULTS:0 = 전황
ENDSELECT


@CARD_71443(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
	CASE "レア度"
		RETURN CMN
	CASE "추가日"
		RETURN 250913
ENDSELECT

RETURN 0

@CARD_EXPLANATION_71443(종류)
