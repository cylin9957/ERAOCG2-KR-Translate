@Doremi_fans(対面者,場所,조교대상,活動종류)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 場所
#DIM DYNAMIC 조교대상
#DIMS DYNAMIC 活動종류
#DIMS DYNAMIC 추가カテ
#DIM DYNAMIC 進程
#DIM DYNAMIC 実行役대상
#DIMS DYNAMIC 実行役대상名


CALL 対面者판정(対面者)
듀얼리스트 = %RESULTS%

SELECTCASE 듀얼리스트
	CASE "자신"
		SIF !MATCH(자신_永紋章, 79860)
			CALL CARD_RESERV("자신",79860,永紋章予約)
	CASE "상대"
		SIF !MATCH(상대_永紋章, 79860)
			CALL CARD_RESERV("상대",79860,永紋章予約)
ENDSELECT

CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",場所,1)
IF RESULT != -1
	実行役대상 = RESULT
	実行役대상名 = %CALLNAME:実行役대상%
ELSE
	TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:場所")}, "名前"
	実行役대상名 = %RESULTS%
ENDIF


SELECTCASE 조교대상
	CASE NO_TO_CHARANUM(2086)
		추가カテ = 큐티아오시
		SETCOLOR C_H_PINK

	CASE NO_TO_CHARANUM(2087)
		추가カテ = 드리미아오시
		SETCOLOR C_G_YELLOW

	CASE NO_TO_CHARANUM(2088)
		추가カテ = 엘리티아오시
		SETCOLOR C_L_BLUE

	CASE NO_TO_CHARANUM(2089)
		추가カテ = 팬시아오시
		SETCOLOR C_W_RED

	CASE NO_TO_CHARANUM(2090)
		추가カテ = 그레이시아오시
		SETCOLOR C_P_BLUE

	CASE NO_TO_CHARANUM(2091)
		추가カテ = 엔제리아오시
		SETCOLOR C_ORANGE

	CASE NO_TO_CHARANUM(2092)
		추가カテ = 뷰티아오시
		SETCOLOR C_W_BLUE

	CASE NO_TO_CHARANUM(2085)
		추가カテ = 쿨리아오시
		SETCOLOR C_P_PURPLE

	CASE NO_TO_CHARANUM(2093)
		추가カテ = 뮤제시아오시
		SETCOLOR C_Ne_PINK

	CASEELSE
		RETURN 0 
ENDSELECT

SELECTCASE 活動종류
	CASE "汎用"
        SELECTCASE RAND:3
            CASE 0
                PRINTFORML 
                PRINTFORML  %CALLNAME:조교대상%가 양손으로 하트 모양을 만들어 "%実行役대상名%"를 향해 뻗는다!
				PRINTFORMW
            CASE 1
                PRINTFORML 
                PRINTFORML  %CALLNAME:조교대상%가 양손으로 하트를 만드는 포즈로 "%実行役대상名%"에게 손을 뻗는다!
                PRINTFORMW
            CASE 2
				PRINTFORML 
                PRINTFORML  %CALLNAME:조교대상%가 양손으로 하트를 만드는 포즈로 "%実行役대상名%"에게 손을 뻗는다!
                PRINTFORMW
        ENDSELECT
    CASE "登場"
        PRINTFORML 
        PRINTFORML  %CALLNAME:조교대상%가 화려한 아이돌 의상으로 등장!
		PRINTFORMW
    CASE "無効"
        PRINTFORML 
        PRINTFORML  %CALLNAME:조교대상%가 추파를 던진다!
        PRINTFORML  "%実行役대상名%"가 넋을 잃고, 효과를 멋대로 중단했다.
        PRINTFORMW
    CASE "最初聴衆"
		PRINTFORML 
        PRINTFORML  "%実行役대상名%"는 %CALLNAME:조교대상%의 열심인 연습 모습에 감동!
        PRINTFORMW
    CASE "公演"
        PRINTFORML 
        PRINTFORML "우리의 무대에 오신 것을 환영합니다, 여러분과 함께 이 공연을 즐기고 싶어요!"
        PRINTFORMW
ENDSELECT

IF GROUPMATCH(GETVARS(@"%対面者%_MZ_追カテ:場所"),"큐티아오시","드리미아오시","엘리티아오시","팬시아오시","그레이시아오시","엔제리아오시","뷰티아오시","쿨리아오시","뮤제시아오시")
	IF GETVARS(@"%対面者%_MZ_追カテ:場所") == 추가カテ
		進程 = 1
	ELSEIF GROUPMATCH(GETVARS(@"%対面者%_MZ_追カテ2:場所"),"도레미 하코오시",추가カテ)
		進程 = 1
	ELSEIF GROUPMATCH(GETVARS(@"%対面者%_MZ_追カテ2:場所"),"큐티아오시","드리미아오시","엘리티아오시","팬시아오시","그레이시아오시","엔제리아오시","뷰티아오시","쿨리아오시","뮤제시아오시")
		CALL FULLRESET
		CALL CARD_SET_CATEGORY(対面者,"필드",場所,"도레미 하코오시",1)
		進程 = 2
	ELSE
		CALL FULLRESET
		CALL CARD_SET_CATEGORY(対面者,"필드",場所,추가カテ,1)
		進程 = 0
	ENDIF
ELSE
	CALL FULLRESET
	CALL CARD_SET_CATEGORY(対面者,"필드",場所,추가カテ)
	進程 = 0
ENDIF

SELECTCASE 進程
	CASE 0
		PRINTFORML "%実行役대상名%"는 %CALLNAME:조교대상%의 아이돌 모습에 매료되어, "%추가カテ%"가 되어버렸다!
		PRINTFORMW
	CASE 1
		PRINTFORML 오시 아이돌 %CALLNAME:조교대상%와의 교류, "%実行役대상名%"는 완전히 그 매력의 포로가 되었다.
		PRINTFORMW
		IF GETVAR(@"%対面者%_MZ_不材:場所") == 0
			PRINTFORML "%実行役대상名%"는 소환 소재가 되는 것을 거부하고, 필드에 남아 %CALLNAME:조교대상%를 계속 지켜보고 싶어하는 것 같습니다!
			PRINTFORMW
			CALL FULLRESET
			CALL SET_FIELD_INFO(対面者,"필드",場所,"不材",2)

		ELSEIF RAND:7 < 손패数(対面者)
			;손패が多ければ多いほど、손패が破壊される可能性が高くなります
			PRINTFORML "%実行役대상名%"는 아이돌에게 계속 조공하기 위해, 컨트롤러의 손패를 1장 매각했습니다!
			PRINTFORMW
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"손패破壊",,"제외")
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",900)

		ELSE
			PRINTFORML "%実行役대상名%"는 아이돌에게 계속 조공하기 위해, 컨트롤러의 LP를 900 매각했습니다!
			PRINTFORMW
			CALL FULLRESET
			CALL LIFE_CHANGE(対面者,"減少","효과",900)
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",900)
		ENDIF
	CASE 2
		PRINTFORML "%実行役대상名%"는 아이돌들의 연속 매력 공격으로, "도레미 하코오시"로 변모했습니다!
		PRINTFORMW
ENDSELECT
	RESETCOLOR

RETURN 進程





