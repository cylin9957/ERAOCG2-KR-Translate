@Doremi_fans(対面者,場所,조교대상,活動종류)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 場所
#DIM DYNAMIC 조교대상
#DIMS DYNAMIC 活動종류
#DIMS DYNAMIC 추가カテ
#DIM DYNAMIC 進程
#DIM DYNAMIC 実行役대상
#DIMS DYNAMIC 実行役대상名


CALL 対面者판정(対面者)
듀얼리스트 = %RESULTS%

SELECTCASE 듀얼리스트
	CASE "자신"
		SIF !MATCH(자신_永紋章, 79860)
			CALL CARD_RESERV("자신",79860,永紋章予約)
	CASE "상대"
		SIF !MATCH(상대_永紋章, 79860)
			CALL CARD_RESERV("상대",79860,永紋章予約)
ENDSELECT

CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",場所,1)
IF RESULT != -1
	実行役대상 = RESULT
	実行役대상名 = %CALLNAME:実行役대상%
ELSE
	TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:場所")}, "名前"
	実行役대상名 = %RESULTS%
ENDIF


SELECTCASE 조교대상
	CASE NO_TO_CHARANUM(2086)
		추가カテ = 큐티아오시
		SETCOLOR C_H_PINK

	CASE NO_TO_CHARANUM(2087)
		추가カテ = 드리미아오시
		SETCOLOR C_G_YELLOW

	CASE NO_TO_CHARANUM(2088)
		추가カテ = 엘리티아오시
		SETCOLOR C_L_BLUE

	CASE NO_TO_CHARANUM(2089)
		추가カテ = 팬시아오시
		SETCOLOR C_W_RED

	CASE NO_TO_CHARANUM(2090)
		추가カテ = 그레이시아오시
		SETCOLOR C_P_BLUE

	CASE NO_TO_CHARANUM(2091)
		추가カテ = 엔제리아오시
		SETCOLOR C_ORANGE

	CASE NO_TO_CHARANUM(2092)
		추가カテ = 뷰티아오시
		SETCOLOR C_W_BLUE

	CASE NO_TO_CHARANUM(2085)
		추가カテ = 쿨리아오시
		SETCOLOR C_P_PURPLE

	CASE NO_TO_CHARANUM(2093)
		추가カテ = 뮤제시아오시
		SETCOLOR C_Ne_PINK

	CASEELSE
		RETURN 0 
ENDSELECT

SELECTCASE 活動종류
	CASE "汎用"
        SELECTCASE RAND:3
            CASE 0
                PRINTFORML 
                PRINTFORML  %CALLNAME:조교대상%両手でハートの形を作り「%実行役대상名%」に向かって伸ばす！
				PRINTFORMW
            CASE 1
                PRINTFORML 
                PRINTFORML  %CALLNAME:조교대상%両手でハートを作るポーズで「%実行役대상名%」に手を伸ばす！
                PRINTFORMW
            CASE 2
				PRINTFORML 
                PRINTFORML  %CALLNAME:조교대상%両手でハートを作るポーズで「%実行役대상名%」に手を伸ばす！
                PRINTFORMW
        ENDSELECT
    CASE "登場"
        PRINTFORML 
        PRINTFORML  %CALLNAME:조교대상%が華やかなアイドル衣装で登場！
		PRINTFORMW
    CASE "無効"
        PRINTFORML 
        PRINTFORML  %CALLNAME:조교대상%が媚眼を投げかける！
        PRINTFORML  「%実行役대상名%」が魂を奪われ、효과を勝手に中断した。
        PRINTFORMW
    CASE "最初聴衆"
		PRINTFORML 
        PRINTFORML  「%実行役대상名%」は%CALLNAME:조교대상%の熱心な練習姿に感動！
        PRINTFORMW
    CASE "公演"
        PRINTFORML 
        PRINTFORML 「私たちの舞台へようこそ、皆さんと一緒にこの公演を楽しみましょう！」
        PRINTFORMW
ENDSELECT

IF GROUPMATCH(GETVARS(@"%対面者%_MZ_追カテ:場所"),"큐티아오시","드리미아오시","엘리티아오시","팬시아오시","그레이시아오시","엔제리아오시","뷰티아오시","쿨리아오시","뮤제시아오시")
	IF GETVARS(@"%対面者%_MZ_追カテ:場所") == 추가カテ
		進程 = 1
	ELSEIF GROUPMATCH(GETVARS(@"%対面者%_MZ_追カテ2:場所"),"도레미 하코오시",추가カテ)
		進程 = 1
	ELSEIF GROUPMATCH(GETVARS(@"%対面者%_MZ_追カテ2:場所"),"큐티아오시","드리미아오시","엘리티아오시","팬시아오시","그레이시아오시","엔제리아오시","뷰티아오시","쿨리아오시","뮤제시아오시")
		CALL FULLRESET
		CALL CARD_SET_CATEGORY(対面者,"필드",場所,"도레미 하코오시",1)
		進程 = 2
	ELSE
		CALL FULLRESET
		CALL CARD_SET_CATEGORY(対面者,"필드",場所,추가カテ,1)
		進程 = 0
	ENDIF
ELSE
	CALL FULLRESET
	CALL CARD_SET_CATEGORY(対面者,"필드",場所,추가カテ)
	進程 = 0
ENDIF

SELECTCASE 進程
	CASE 0
		PRINTFORML 「%実行役대상名%」は%CALLNAME:조교대상%のアイドル姿に魅了された、「%추가カテ%」になってしまった！
		PRINTFORMW
	CASE 1
		PRINTFORML 오시アイドル%CALLNAME:조교대상%との交流、「%実行役대상名%」は完全にその매력の虜となった。
		PRINTFORMW
		IF GETVAR(@"%対面者%_MZ_不材:場所") == 0
			PRINTFORML 「%実行役대상名%」は소환素材になることを拒否し、場に残って%CALLNAME:조교대상%を見守り続けたいようです！
			PRINTFORMW
			CALL FULLRESET
			CALL SET_FIELD_INFO(対面者,"필드",場所,"不材",2)

		ELSEIF RAND:7 < 손패数(対面者)
			;손패が多ければ多いほど、손패が破壊される可能性が高くなります
			PRINTFORML 「%実行役대상名%」はアイドルへの貢ぎを続けるため、コントローラーの손패を1枚売却しました！
			PRINTFORMW
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"손패破壊",,"제외")
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",900)

		ELSE
			PRINTFORML 「%実行役대상名%」はアイドルへの貢ぎを続けるため、コントローラーのLPを900売却しました！
			PRINTFORMW
			CALL FULLRESET
			CALL LIFE_CHANGE(対面者,"減少","효과",900)
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",900)
		ENDIF
	CASE 2
		PRINTFORML 「%実行役대상名%」はアイドルたちの連続매력攻撃により、「도레미 하코오시」へと変貌しました！
		PRINTFORMW
ENDSELECT
	RESETCOLOR

RETURN 進程





@Doremi_FansAttack(듀얼리스트,조교대상場所,実行役대상場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIM DYNAMIC 조교대상場所
#DIM DYNAMIC 実行役대상場所
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 実行役대상
#DIMS DYNAMIC 実行役대상名

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",조교대상場所)
SIF RESULT != -1
	조교대상 = RESULT
	
CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",実行役대상場所,1)
IF RESULT != -1
	実行役대상 = RESULT
	実行役대상名 = %CALLNAME:実行役대상%
ELSE
	TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:実行役대상場所")}, "名前"
	実行役대상名 = %RESULTS%
ENDIF

PRINTFORML 
PRINTFORMW %CALLNAME:조교대상%がバックグラウンドの隅で%実行役대상名%と出会った！
PRINTFORML %実行役대상名%が욕망に駆られて%CALLNAME:조교대상%を襲撃した！
PRINTFORMW

CALL EROTIC_MOVE("前穴凌辱",조교대상,実行役대상,100)
CALL STATCHANGE_EFFECT(듀얼리스트,"自身",조교대상場所,"発情",2)
CALL STATCHANGE_EFFECT(듀얼리스트,"自身",조교대상場所,"接可",2)
RETURN




