#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 엘리멘틀 그레이스 드리야드
	CASE "略称"
		RESULTS = 정령신후드리야드
	CASE "カテゴリ"
		RESULTS:0 = 드리야드
ENDSELECT


@CARD_11608(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RESULT:1 = 땅속성
		RESULT:2 = 물속성
		RESULT:3 = 바람속성
		RESULT:4 = 화염속성
		RESULT:5 = 어둠속성
		RETURN 빛속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 9
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	CASE "성별"
		RETURN 牝性
	CASE "소환불가"
		RETURN 1
	CASE "특수불가"
		RETURN 1
	CASE "추가日"
		RETURN 250915
ENDSELECT

RETURN 0

