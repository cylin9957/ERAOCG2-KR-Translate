		CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,300,300)
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 물속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,300,300)
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 바람속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,300,300)
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 땅속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,300,300)
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 빛속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,300,300)
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,300,300)

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 화염속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",装備先,"貫通")
	ENDIF

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 물속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",装備先,"戦耐")
	ENDIF

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 땅속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",装備先,"戦阻")
	ENDIF

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 빛속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",装備先,"対耐")
	ENDIF

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",装備先,"破耐")
	ENDIF

ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71701,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 엘리멘트
		효과条件종류 = モン全般
		효과条件固名前選択 = 1
		효과条件行先플래그 = 제외行き
		효과条件複数 = 3
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件名前 = 엘리멘트 암즈
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

