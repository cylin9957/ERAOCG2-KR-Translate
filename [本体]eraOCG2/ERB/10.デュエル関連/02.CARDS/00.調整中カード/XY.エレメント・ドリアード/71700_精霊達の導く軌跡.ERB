@CARDNAME_71700,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 엘리멘트 트레일
	CASE "略称"
		RESULTS = 정령이이끄는궤적
	CASE "カテゴリ"
		RESULTS:0 = 엘리멘트
		RESULTS:1 = 정령
		RESULTS:3 = 게임 오리지널
ENDSELECT


@CARD_71700(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
	CASE "추가日"
		RETURN 250915
ENDSELECT

RETURN 0

@CARD_EXPLANATION_71700(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 "엘리멘트 트레일"이 된다。
PRINTL "엘리멘트 트레일"의 ③의 효과는 １턴에 １번밖에 사용할 수 없다。
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ①：자신 필드의 몬스터의 공격력 / 수비력은、
PRINTL 자신 필드의 몬스터의 속성의 종류×１００、자신 필드의 "정령"몬스터의 종류의 수×３００ 오른다。
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ②：자신의 필드 / 묘지에 존재하는 "엘리멘트" 몬스터의 종류에 따라、이하의 효과를 얻는다。
PRINTL ●２종류 이상：자신 필드의 "엘리멘트" 몬스터는대상 내성을 얻는다。
PRINTL ●４종류 이상：자신 필드의 "엘리멘트" 몬스터는 파괴 내성을 얻는다。
PRINTL ●６종류 이상：자신 필드의 "엘리멘트" 마법 / 함정 카드도 대상 내성 / 파괴 내성을 얻는다。
CALL CARD_ABLE(1,발동誘発)
PRINTL ③：상대가 몬스터의 효과 / 마법 / 함정 카드를 발동했을 때、자신 / 상대 필드의 몬스터의 속성의 종류가６종류 이상인 경우에 발동할 수 있다。
PRINTL 덱 / ＥＸ덱에서 "엘리멘트" 몬스터１체를 묘지에 보내、그 발동을 무효로 하고 파괴한다。

@CARDCAN_71700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71700)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 발동誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0

	SIF 발동済_1(듀얼리스트,71700)
		RETURN 0

	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 엘리멘트
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件속성 = 빛속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		カウンタ += 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件속성 = 바람속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		カウンタ += 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件속성 = 물속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		カウンタ += 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件속성 = 땅속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		カウンタ += 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件속성 = 화염속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		カウンタ += 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件속성 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		カウンタ += 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件속성 = 신속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		カウンタ += 1

	SIF カウンタ < 6
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과	|| 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_71700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71700)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71700,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲EX덱 = 1
		효과条件カテゴリ = 엘리멘트
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"破壊")
		ENDIF
	ENDIF

ELSEIF 종류 == 攻守変動
	;攻撃UP
	CALL FULLRESET
	CALL FIELD_INFO_COUNT(듀얼리스트,"属")
	攻撃力修正 = RESULT * 100
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,攻撃力修正,攻撃力修正)

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 정령
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 300
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,攻撃力修正,攻撃力修正)

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "엘리멘트 트레일")

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 엘리멘트
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	カウンタ = RESULT
	IF カウンタ >= 2
		CALL FULLRESET
		효과条件カテゴリ = 엘리멘트
	    CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
	ENDIF
	IF カウンタ >= 4
		CALL FULLRESET
		효과条件カテゴリ = 엘리멘트
	    CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
	ENDIF
	IF カウンタ >= 6
		CALL FULLRESET
		효과条件カテゴリ = 엘리멘트
	    CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐")
	    CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐")
	ENDIF
ENDIF