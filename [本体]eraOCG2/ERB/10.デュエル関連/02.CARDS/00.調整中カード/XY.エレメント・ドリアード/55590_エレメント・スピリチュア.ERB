@CARDNAME_55590,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 엘리멘트 스피리추어
	CASE "略称"
		RESULTS = 원소영혼
	CASE "カテゴリ"
		RESULTS:0 = 엘리멘트
		RESULTS:1 = 정령
		RESULTS:3 = 게임 오리지널
ENDSELECT


@CARD_55590(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 링크
	CASE "속성"
		RESULT:1 = 땅속성
		RESULT:2 = 물속성
		RESULT:3 = 바람속성
		RESULT:4 = 화염속성
		RETURN 어둠속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	CASE "추가日"
		RETURN 250915
ENDSELECT

RETURN 0

