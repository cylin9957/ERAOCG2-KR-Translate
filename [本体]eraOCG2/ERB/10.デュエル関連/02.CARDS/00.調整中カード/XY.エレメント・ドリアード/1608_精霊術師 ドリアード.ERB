	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1200
	CASE "守備力"
		RETURN 1400
	CASE "성별"
		RETURN 牝性
	CASE "추가日"
		RETURN 250420
ENDSELECT

RETURN 0
