PRINTL 그 몬스터는 턴 종료 시에 제외된다。
CALLFORM CARD_ABLE(3,묘지起動)
PRINTL ③：이 카드가 묘지에 존재하는 경우에 발동할 수 있다。
PRINTL 자신의 패 / 덱 / EX덱에서 마법사족 / 빛속성 / 암컷 몬스터를 각각 １체씩 묘지에 보내고、
PRINTL 묘지의 이 카드를 융합 소환한다。


@CARDSUMMON_59740(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 5
素材条件数自由 = 1
;素材条件素材数起動 = 1

IF EX参照 == 0 || EX参照 == 1
	素材条件名前:0 = 데스피아의 도화 알베르
	素材条件名前:1 = 더 비스테드 알베르
ELSEIF EX参照 >= 10
	素材条件종족 = 마법사족
	素材条件속성 = 빛속성
	素材条件성별 = 牝性
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,59740) 
	RETURN RESULT
ENDIF



@CARDCAN_59740(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59740)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	; SIF 발동済_2(듀얼리스트,59740)
	; 	RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件속성 = 빛속성
	효과条件종족 = 마법사족
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 10
	효과条件除去種 = 無効
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_3(듀얼리스트,59740)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,59740,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件속성 = 빛속성
	효과条件종족 = 마법사족
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件속성 = 빛속성
	효과条件종족 = 마법사족
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件속성 = 빛속성
	효과条件종족 = 마법사족
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == リアクション효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_59740(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード



IF 종류 == 지속효과
	CALL FULLRESET
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"不材",3,1)
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"対耐",3,1)
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59740)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件속성 = 빛속성
		효과条件종족 = 마법사족
		효과条件성별 = 牝性
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件표시 = 10
			효과条件除去種 = 無効
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대필드",ゾーン,場所)
			IF RESULT != 9999
				選択カード = RESULT
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"無効",2,上書きモード,1)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"終処",제외行き,上書きモード,1)
				SETCOLOR C_RED
				PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
				PRINTFORML
				PRINTFORML 상대 몬스터에게 성녀의 영혼이 들러붙는다！
				PRINTFORML
				RESETCOLOR
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59740,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件속성 = 빛속성
		효과条件종족 = 마법사족
		효과条件성별 = 牝性
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件속성 = 빛속성
			효과条件종족 = 마법사족
			효과条件성별 = 牝性
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件속성 = 빛속성
				효과条件종족 = 마법사족
				효과条件성별 = 牝性
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					SETCOLOR C_RED
					PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
					PRINTFORML
					PRINTFORML 공허한 눈의 성녀들의 기도가 모여、비극룡 루벨리온이 부활했다.
					PRINTFORML 
					RESETCOLOR
					CALL FULLRESET
					CALL CARD_SP_SUMMON(듀얼리스트,"묘지",場所)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == リアクション효과
	IF GETVAR(@"%듀얼리스트%_MZ_リ数:場所") < 10
		SETCOLOR C_PINK
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTFORML
		PRINTFORML 알베르는 성녀들과 하나가 되고있다
		PRINTFORML
		RESETCOLOR
		CALL EROTIC_MOVE("全身愛撫",NO_TO_CHARANUM(1880),NO_TO_CHARANUM(1885),100)
		CALL EROTIC_MOVE("全身愛撫",NO_TO_CHARANUM(1881),NO_TO_CHARANUM(1885),100)
		CALL EROTIC_MOVE("全身愛撫",NO_TO_CHARANUM(1882),NO_TO_CHARANUM(1885),100)
		CALL EROTIC_MOVE("全身愛撫",NO_TO_CHARANUM(1883),NO_TO_CHARANUM(1885),100)
		CALL EROTIC_MOVE("全身愛撫",NO_TO_CHARANUM(1888),NO_TO_CHARANUM(1885),100)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"リ数",1)
	ENDIF
ENDIF




