@CARD_EXPLANATION_79778(종류)
#DIM DYNAMIC 종류

CALL TEXT_DECORATION("ROGUE")
PRINTL このカード名の①②の효과はそれぞれ１ターンに１度しか使用できない。
CALL CARD_ABLE(1,마함起動,손패起動)
PRINTL ①：덱外から상대の묘지に「アルバスの落胤」１体を生成し、
PRINTL 덱からレベル４の마법사족・빛속성・牝性モンスター１体を손패に加える。
CALL CARD_ABLE(2,ターン終了時)
PRINTL ②：자신・상대のエンドフェイズに발동できる。
PRINTL 자신の묘지の마법사족・빛속성・牝性モンスター１体を제외し、묘지のこのカードを손패に加える。
CALL TEXT_DECORATION("ROGUE")

@CARDCAN_79778(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79778)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79778)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件속성 = 빛속성
	효과条件종족 = 마법사족
	효과条件성별 = 牝性
	효과条件レベル = 4
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_2(듀얼리스트,79778)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件속성 = 빛속성
	효과条件종족 = 마법사족
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79778(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79778,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		SETCOLOR C_RED
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTFORML
		PRINTFORML アルバスは力尽き、倒れた。
		PRINTFORML 
		CALL FULLRESET
		CALL CARD_GENERATE_GY(対面者,1884)
		PRINTFORML 
		RESETCOLOR
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件속성 = 빛속성
		효과条件종족 = 마법사족
		효과条件성별 = 牝性
		효과条件レベル = 4
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79778,2)
	IF RESULT == 0
		SETCOLOR C_RED
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTFORML
		PRINTFORML 聖女たちが虚ろな目で祈りを捧げる……
		PRINTFORML 
		RESETCOLOR
		CALL FULLRESET
		효과条件속성 = 빛속성
		효과条件종족 = 마법사족
		효과条件성별 = 牝性
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,손패行き)
		ENDIF
	ENDIF
ENDIF

