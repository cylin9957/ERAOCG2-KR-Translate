@CARD_EXPLANATION_39630(종류)
#DIM DYNAMIC 종류

CALL TEXT_DECORATION("ROGUE")
PRINTL このカード名の①②③の효과はそれぞれ１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①：자신のメインフェイズに발동できる。
PRINTL 자신の덱、または자신・상대の묘지から「알버스의 낙윤」１体を消去し、
PRINTL このカードを손패・묘지から특수소환する。
CALLFORM CARD_ABLE(2,소환時,특수소환時)
PRINTL ②：このカードが소환・특수소환した場合に발동できる。
PRINTL 덱から「데스피아의 도화 알베르」または「더 비스테드 알베르」１体を특수소환し、
PRINTL このカードをそのモンスターに装備する。
PRINTL 装備モンスターが破壊される場合、代わりにこの효과で装備したこのカードを破壊する。
CALLFORM CARD_ABLE(3,마함起動)
PRINTL ③：このカードが마법＆함정ゾーンに存在する場合、자신・상대のメインフェイズに발동できる。
PRINTL 자신の덱・EX덱・フィールドのモンスターカードを융합素材とし、
PRINTL レベル８以上の융합モンスター１体をEX덱から융합소환する。
PRINTL その際、１体目の융합素材はこのカードを装備したモンスターでなければならない。
CALL TEXT_DECORATION("ROGUE")



@CARDCAN_39630(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39630)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,39630)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,39630,"손패")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과範囲상대묘지 = 1
	효과条件名前 = 알버스의 낙윤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,39630)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件名前:0 = 데스피아의 도화 알베르
	효과条件名前:1 = 더 비스테드 알베르
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == フリー誘発
	SIF 발동済_3(듀얼리스트,39630)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"마함")
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0

	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲마함 = 1
	素材範囲덱 = 1
	素材範囲EX덱 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 융합
	CALL 효과条件レベル_ADV(8,"以上")
	強制素材場所 = 지정場所(装備先,"필드")
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == リアクション효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39630(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39630,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件名前 = 알버스의 낙윤
		효과条件行先플래그 = 소멸行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			SETCOLOR C_RED
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			RESETCOLOR
			PRINTFORML
			PRINTFORML 「アルバス、さよなら……」
			PRINTFORML
			SETCOLOR C_RED
			PRINTFORML 에클레시아はアルバスの亡き骸を踏みにじりながら現れる
			PRINTFORMW 
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39630,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件名前:0 = 데스피아의 도화 알베르
		효과条件名前:1 = 더 비스테드 알베르
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			PRINTFORML
			SETCOLOR C_RED
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			RESETCOLOR
			PRINTFORML
			PRINTFORMW 「いらっしゃいませ……
			CLEARLINE 1
			SETCOLOR C_PINK
			PRINTFORMW 「いらっしゃいませ……ご主人様❤」
			PRINTFORML
			SETCOLOR C_RED
			PRINTFORML 에클레시아は알베르に傅いた。
			RESETCOLOR
			PRINTFORML 
		    CALL FULLRESET
			CALL CARD_EQUIP_MONSTER(듀얼리스트,カード소환先,"필드",場所,4)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39630,3)
	IF RESULT == 0
		CALL RESETAREA_MAT
		素材範囲필드 = 1
		素材範囲마함 = 1
		素材範囲덱 = 1
		素材範囲EX덱 = 1
		CALL FULLRESET
		효과条件종류 = 융합
		CALL 효과条件レベル_ADV(8, "以上")
		強制素材場所 = 지정場所(装備先,"필드")
		효과条件소환可 = 2
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
			CALL FUSSUMMON(듀얼리스트,選択カード)
		ENDIF
	ENDIF
ELSEIF 종류 == リアクション효과
	装備先 = GETVAR(@"%듀얼리스트%_魔_装:場所")
	IF GETVAR(@"%듀얼리스트%_MZ_リ数:装備先") < 10
		SETCOLOR C_PINK
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTFORML
		PRINTFORML 「ん……ちゅっ……気持ちいいですか？」
		RESETCOLOR
		PRINTFORML
		SETCOLOR C_PINK
		PRINTFORML 에클레시아は알베르にご奉仕している。
		PRINTFORML
		RESETCOLOR
		CALL EROTIC_MOVE("펠라치오",NO_TO_CHARANUM(1880),NO_TO_CHARANUM(1885),100)
		CALL EROTIC_MOVE("파이즈리",NO_TO_CHARANUM(1880),NO_TO_CHARANUM(1885),100)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",装備先,"リ数",1)
	ENDIF
ENDIF
