@CARDCAN_59821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39785)
SIF RESULT == 1
    RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,59821)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲덱 = 1
	효과条件성별 = 성별在
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_59821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 지속효과
	CALL FULLRESET
	효과条件名前 = 사바트리스의 향연
	CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐")
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59821,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲덱 = 1
		효과条件성별 = 성별在
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		選択カード_ID = RESULT:1
		TRYCALLFORM CARDNAME_{選択カード_ID},"カテゴリ"
		FOR カウンタ,0,5
			IF RESULTS:カウンタ != ""
				SIF MATCH(RESULTS:カウンタ, 효과条件カテゴリ)
					条件달성 ++
				SIF MATCH(효과条件カテゴリ, RESULTS:カウンタ)
					条件달성 ++
			ENDIF
		NEXT
		IF 条件달성 == 0
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"悪Ｃ",1,0)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"発情",2,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"接可",2,1)
		ENDIF
	ENDIF
ENDIF
