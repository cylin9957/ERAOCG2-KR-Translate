@CARDNAME_31400,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 미계역의 넷시
	CASE "略称"
		RESULTS = 넷시
	CASE "カテゴリ"
		RESULTS:0 = 미계역
ENDSELECT


