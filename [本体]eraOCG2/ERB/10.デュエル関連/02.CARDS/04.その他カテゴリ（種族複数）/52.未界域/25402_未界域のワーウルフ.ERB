@CARDCAN_25402(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25402)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,25402,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 손패→묘지
	SIF 발동済_1(듀얼리스트,25402)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_25402(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25402)
	IF RESULT == 0
		CALL CARD_RANDOM_HAND(듀얼리스트)
		選択カード = RESULT
		CALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_손패:選択カード")}("名前")
		IF RESULTS == "미계역의 워울프"
			CALL CARD_DISPOSE(듀얼리스트,"손패",選択カード)
		ELSE
			CALL CARD_DISPOSE(듀얼리스트,"손패",選択カード)
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF

	ENDIF
ELSEIF 종류 == 손패→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25402,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_ADV(듀얼리스트,"全体除去",場所,"一攻DOWN",1000)
	ENDIF
ENDIF

