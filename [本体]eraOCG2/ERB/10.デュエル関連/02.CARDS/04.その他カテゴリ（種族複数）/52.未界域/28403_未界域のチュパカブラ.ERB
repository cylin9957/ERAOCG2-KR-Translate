@CARDCAN_28403(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28403)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,28403,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 손패→묘지
	SIF 발동済_1(듀얼리스트,28403)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件固名前 = 미계역의 츄파카브라
	효과条件カテゴリ = 미계역
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_28403(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28403)
	IF RESULT == 0
		CALL CARD_RANDOM_HAND(듀얼리스트)
		選択カード = RESULT
		CALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_손패:選択カード")}("名前")
		IF RESULTS == "미계역의 츄파카브라"
			CALL CARD_DISPOSE(듀얼리스트,"손패",選択カード)
		ELSE
			CALL CARD_DISPOSE(듀얼리스트,"손패",選択カード)
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF

	ENDIF
ELSEIF 종류 == 손패→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28403,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件固名前 = 미계역의 츄파카브라
		효과条件カテゴリ = 미계역
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

