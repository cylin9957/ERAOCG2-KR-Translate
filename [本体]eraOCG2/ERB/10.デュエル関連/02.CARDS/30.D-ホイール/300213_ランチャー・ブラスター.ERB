@CARD_EXPLANATION_300213(종류)
#DIM DYNAMIC 종류

PRINTL 부스트는 １턴에 １번밖에 발동할 수 없다。
CALLFORM CARD_ABLE(2,부스트起動)
PRINTL ①：스피드 카운터를 ４개 소비하고 발동할 수 있다。
PRINTL 상대 필드의 몬스터를 전부 파괴한다。
PRINTL 이 효과를 발동하는 턴、자신은 배틀 페이즈를 이행할 수 없다。

@CARDCAN_300213(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,300213)
SIF RESULT == 1
	RETURN 0

IF 종류 == 부스트起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,300213)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_SpＣ") < 4
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_300213(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択肢

IF 종류 == 부스트起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,300213,1)
	IF RESULT == 0
		CALL SET_PLAYER_INFO(듀얼리스트,"SpＣ",-4,0,1)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
	ENDIF
ENDIF
