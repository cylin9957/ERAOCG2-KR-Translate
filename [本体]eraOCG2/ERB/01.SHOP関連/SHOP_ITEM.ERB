@ITEMPRICE_SPECIAL(아이템_구입)
#FUNCTION
#DIM DYNAMIC 아이템_구입

SELECTCASE 아이템_구입
	CASE 63
		;기교UP
		SELECTCASE ABL:MASTER:기교
			CASE IS < 5
				RETURNF ITEMPRICE:(아이템_구입)
			CASE IS < 10
				RETURNF ITEMPRICE:(아이템_구입) * 2 * (ABL:MASTER:기교 - 3)
			CASE IS < 19
				RETURNF ITEMPRICE:(아이템_구입) * 2 * (POWER(ABL:MASTER:기교 - 9, 2) + 6)
			CASEELSE
				RETURNF 999999
		ENDSELECT
	CASEELSE
		RETURNF ITEMPRICE:(아이템_구입)
ENDSELECT


