		SETCOLOR C_YELLOW
		SIF カウンタ % 6 == 0
			PRINTL
		PRINTL 
		PRINTL 　――조교계 커맨드(하드)――――
	ELSEIF カウンタ == 300
		SETCOLOR C_YELLOW
		SIF カウンタ % 6 == 0
			PRINTL
		PRINTL 
		PRINTL 　――일상계 커맨드A（회화등）――
	ELSEIF カウンタ == 400
		SETCOLOR C_YELLOW
		SIF カウンタ % 6 == 0
			PRINTL
		PRINTL 
