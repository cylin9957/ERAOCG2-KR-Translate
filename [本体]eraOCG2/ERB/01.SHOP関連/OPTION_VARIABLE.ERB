	RESETCOLOR
NEXT
PRINTL
CALL COLOR_LINE(C_ROYAL_BLUE)
PRINTFORML 캐릭터ID：
RESETCOLOR
PRINTBUTTON @"　＞[8888] - [%NAME:캐릭터_ID%]",8888
PRINTFORML 
CALL COLOR_LINE(C_ROYAL_BLUE)
PRINTFORML
PRINTL 　[9999] - 뒤로

BINPUT
PRINTFORML RESULT:{RESULT}
選択コマンド = RESULT
SELECTCASE 選択コマンド
CASE 9999
	RETURN 0
CASE 8888
	CALL MONSTER_LIST(31)
	SIF RESULT == -1
		RESTART
	캐릭터_ID = RESULT
	TARGET = RESULT
CASE 0 TO 500
	CUSTOMDRAWLINE ―
;	SETCOLOR CFLAG:캐릭터_ID:문자색설정
	TRYCALLFORM M_KOJO_MESSAGE_COM_K{NO:캐릭터_ID}_{選択コマンド}_1
;	RESETCOLOR
	CUSTOMDRAWLINE ―
ENDSELECT
GOTO INPUT_LOOP