;戻り値
; 3 まとめて連れ出せる
; 2 個別選択で連れ出せる
; 1 連れ出せない（取り込み中メッセージ）
; 0 連れ出せない
@COM_351_CONDITION(CHARA)
#FUNCTION
#DIM CHARA
SIF CHARA == MASTER
	RETURNF 0
SIF CFLAG:CHARA:태도 > 0 && CFLAG:CHARA:수면 == 0
	RETURNF 3
;現在동행中の캐릭터は許可(동행条件を満たさなくなった경우에 手動で동행解除できるようにする)
SIF CFLAG:CHARA:동행
	RETURNF 2
SIF CFLAG:CHARA:수면
	RETURNF 0

RETURNF 2


@COM_351_DOUKOUTIME

IF TALENT:TARGET:연모 == 2 
	CFLAG:TARGET:동행 = 1400
ELSEIF TALENT:TARGET:연모 == 1 
	CFLAG:TARGET:동행 = 300
ELSE
	CFLAG:TARGET:동행 = 60
ENDIF

@COM_351_DOUKOUTIME_2(LOCAL)

IF TALENT:(TARGET:LOCAL):연모 == 2 
	CFLAG:(TARGET:LOCAL):동행 = 1400
ELSEIF TALENT:(TARGET:LOCAL):연모 == 1 
	CFLAG:(TARGET:LOCAL):동행 = 300
ELSE
	CFLAG:(TARGET:LOCAL):동행 = 60
ENDIF


@DOUKOUSHA_AMOUNT
#FUNCTION
#DIM DYNAMIC 캐릭터_ID
#DIM DYNAMIC リターン値

FOR 캐릭터_ID,1,CHARANUM
	SIF !CFLAG:캐릭터_ID:동행
		CONTINUE
	リターン値 ++
NEXT

RETURNF リターン値

