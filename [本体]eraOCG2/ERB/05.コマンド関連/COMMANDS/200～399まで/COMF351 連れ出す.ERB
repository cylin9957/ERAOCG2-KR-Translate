;-------------------------------------------------
@COM351
#DIM DYNAMIC NUM_TARGET
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 連れ出し캐릭터数
#DIM DYNAMIC 現在동행数

IF 依頼_受領中 >= 1
	SETCOLOR C_YELLOW
	PRINTFORMW 의뢰수령중엔 데리고나가기、동행해제를 할 수 없습니다。
	RESETCOLOR
	RETURN 1
ENDIF

NUM_TARGET = GET_TARGETNUM()
;데리고 나간다
SIF !NUM_TARGET
	RETURN -1
FOR カウンタ, 1, NUM_TARGET + 1
	IF COM_351_CONDITION(TARGET:カウンタ) >= 2
		現在동행数 += 1
	ENDIF
NEXT
IF NUM_TARGET == 1 || 現在동행数 == 1
	IF COM_351_CONDITION(TARGET) < 1
		RETURN -1
	ELSEIF COM_351_CONDITION(TARGET) < 2
		CUSTOMDRAWLINE —
		PRINTFORMW %CALLNAME:(TARGET)%는 이미 동행중입니다。
		RETURN -1
	ENDIF

	IF CFLAG:TARGET:동행
		CFLAG:TARGET:동행 = 0
		CFLAG:MASTER:동행 = 0
		PRINTFORMW 동행해제합니다。
	ELSE
		PRINTFORMW %CALLNAME:TARGET%를 데리고 나갑니다
		CALL COM_351_DOUKOUTIME
	ENDIF
	TIME += 1
	RETURN 1
ENDIF

DO
	CUSTOMDRAWLINE —
	PRINTL 누구에게 권유하시겠습니까？
	CUSTOMDRAWLINE —
	FOR カウンタ, 1, NUM_TARGET + 1
		SIF COM_351_CONDITION(TARGET:カウンタ) <= 2
			CONTINUE
		SIF CFLAG:(TARGET:カウンタ):동행준비 || CFLAG:(TARGET:カウンタ):동행
			SETCOLOR C_AQUA
		PRINTFORML [{カウンタ}] - %CALLNAME:(TARGET:カウンタ)%
		RESETCOLOR
	NEXT
	CUSTOMDRAWLINE —
	PRINT [98] - 모두 데리고 나간다　　　　　
	PRINT [97] - 데리고 나간다
	PRINTL 
	PRINTL 
	PRINTL [99] - 동행해제
	CUSTOMDRAWLINE —
	PRINTL [100] - 그만둔다

	BINPUT
	SELECTCASE RESULT
	CASE 100
		FOR カウンタ,1,CHARANUM
			CFLAG:(TARGET:カウンタ):동행준비 = 0 
		NEXT
		RETURN -1
	CASE 99
		FOR カウンタ, 1, NUM_TARGET + 1
			CFLAG:(TARGET:カウンタ):동행 = 0
			CFLAG:(TARGET:カウンタ):동행준비 = 0
			;相合い傘もなくなる
		NEXT
		PRINTFORMW 동행해제합니다
		RETURN 1
	CASE 98
		FOR カウンタ, 1, NUM_TARGET + 1
			IF COM_351_CONDITION(TARGET:カウンタ) >= 3
				CALL COM_351_DOUKOUTIME_2(カウンタ)
				連れ出し캐릭터数 += 1
			ENDIF
		NEXT
		PRINTFORMW {連れ出し캐릭터数}명을 같이 데리고 나갑니다
		TIME += 連れ出し캐릭터数
		SIF CFLAG:TARGET:동행
			RETURN 1
	CASE 97
		FOR カウンタ, 1, NUM_TARGET + 1
			IF (COM_351_CONDITION(TARGET:カウンタ) >= 3) && (CFLAG:(TARGET:カウンタ):동행준비 || CFLAG:(TARGET:カウンタ):동행)
				連れ出し캐릭터数 += 1
			ENDIF
		NEXT
		SIF 連れ出し캐릭터数 == 0
			CONTINUE
		IF 連れ出し캐릭터数 == 1
			TIME += 1
			連れ出し캐릭터数 = 0
			FOR カウンタ, 1, NUM_TARGET + 1
				IF (COM_351_CONDITION(TARGET:カウンタ) >= 3) && (CFLAG:(TARGET:カウンタ):동행준비 || CFLAG:(TARGET:カウンタ):동행)
					PRINTFORMW %CALLNAME:(TARGET:カウンタ)%를 데리고 나갑니다
					CALL COM_351_DOUKOUTIME_2(カウンタ)
					CFLAG:(TARGET:カウンタ):동행준비 = 0
					;雨＋外＋傘or상대가 傘の時は相合い傘
				ENDIF
			NEXT
		ELSE
			PRINTFORMW {連れ出し캐릭터数}명을 같이 데리고 나갑니다
			TIME += 連れ出し캐릭터数
			連れ出し캐릭터数 = 0
			FOR カウンタ, 1, NUM_TARGET + 1
				IF (COM_351_CONDITION(TARGET:カウンタ) >= 3) && (CFLAG:(TARGET:カウンタ):동행준비 || CFLAG:(TARGET:カウンタ):동행)
					CALL COM_351_DOUKOUTIME_2(カウンタ)
					CFLAG:(TARGET:カウンタ):동행준비 = 0
				ENDIF
			NEXT
		ENDIF
		SIF CFLAG:TARGET:동행
			RETURN 1
	CASEELSE
		IF !INRANGE(RESULT, 1, NUM_TARGET)
			CLEARLINE 1
			CONTINUE
		ELSEIF COM_351_CONDITION(TARGET:RESULT) < 1
			CLEARLINE 1
			CONTINUE
		ELSEIF COM_351_CONDITION(TARGET:RESULT) < 2
			PRINTFORMW %CALLNAME:(TARGET:RESULT)%는 이미 동행중입니다。
			CLEARLINE 2
			CONTINUE
		ENDIF
		CFLAG:(TARGET:RESULT):동행준비 ^= 1
	ENDSELECT
LOOP 1

@EQUIP_COM351(ARG)
#DIM DYNAMIC 환락강도
;ソースは控えめに適当。애정入りすぎたので自重
IF FLAG:70 == 1

ELSE
	환락강도 = ABL:친밀 * 5
	CALL SOURCE_CALC_환락(TARGET, MASTER, 환락강도)
	CALL SOURCE_CALC_수동(TARGET, MASTER, 환락강도)
	SIF ABL:친밀 > 9 && TIME_PROGRESS(TIME:1) > 10
		EXP:ARG:애정경험 += RAND:2
