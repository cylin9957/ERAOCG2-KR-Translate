;実行판정
;-------------------------------------------------
;게임을 산다
@COM_ABLE461
;一括관리
SIF GLOBAL_COMABLE(461)
	RETURN RESULT
SIF CFLAG:MASTER:현재위치 != 場所_繁華街
	RETURN 0
SIF TIME < 600
	RETURN 0
SIF TIME > 1200
	RETURN 0
;수면中
SIF CFLAG:우후후 == 2
	RETURN 0
RETURN 1