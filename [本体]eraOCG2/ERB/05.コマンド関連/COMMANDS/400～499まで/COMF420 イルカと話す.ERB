@SEIKETU(ARG)
#FUNCTIONS
SELECTCASE FLAG:(1000 + ARG)
	CASE IS < 100
		SETCOLOR C_GREEN
		RETURNF "清潔度:最高"
	CASE IS < 500
		SETCOLOR C_L_GREEN
		RETURNF "清潔度:高"
	CASE IS < 1000
		SETCOLOR C_YELLOW_2
		RETURNF "清潔度:やや高"
	CASE IS < 2000
		SETCOLOR C_YELLOW_2
		RETURNF "清潔度:中"
	CASE IS < 3500
		SETCOLOR C_P_PURPLE
		RETURNF "清潔度:やや低"
	CASE IS < 5000
		SETCOLOR C_P_PURPLE
		RETURNF "清潔度:低"
	CASEELSE
		SETCOLOR C_PINK
		RETURNF "清潔度:ゴミの山"
ENDSELECT

