@COM_ABLE404
;이동実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(404)
	RETURN RESULT
;외출時불가
SIF CFLAG:MASTER:현재위치 >= 自宅部屋最大値
	RETURN 0
SIF TARGET > 0
	RETURN 0
RETURN 1