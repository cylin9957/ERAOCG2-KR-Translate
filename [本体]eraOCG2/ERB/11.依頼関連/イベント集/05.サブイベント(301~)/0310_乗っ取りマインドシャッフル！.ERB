@IRAI_EVENT_310(参照先)
#DIMS DYNAMIC 参照先
#DIM DYNAMIC 대상캐릭터

VARSET RESULT
VARSET RESULTS


SELECTCASE 参照先
	CASE  "名前"
		RESULTS = (CP-MJ)탈취 마인드 셔플！
	CASE "이벤트種"
		RETURN 이벤트_通常
	CASE "依頼先"
		RETURN 即時開始
	CASE "詳細"
		PRINTL 마인드 캐슬린의 타인과 정신을 바꾸는 힘
		PRINTL 이걸로 즐길 수 없을까?
		PRINTL
		SETCOLOR C_RED 
		PRINTL 필요：마인드 캐슬린이 연모 이상
		RESETCOLOR
		PRINTL 
		PRINTL 보수: ?
	CASE "条件"
		;マインド・キャスリンを所有
		SIF CFLAG:NO_TO_CHARANUM(1655):소유함 == 0
			RETURN 0
		;ERAパック解放済み
		SIF パック_解放:99 == 0
			RETURN 0
		RETURN 1
ENDSELECT

RETURN 0

@IRAI_ACT_310(参照)
#DIM DYNAMIC 参照
#DIM DYNAMIC 이벤트主,10
#DIM DYNAMIC 条件달성
;いったんターゲットを非難させる（バグ回避用）

이벤트主 = NO_TO_CHARANUM(1655)

IF 依頼_달성상황 == 0
	PRINTFORML 
	PRINTFORMW 마인드 캐슬린은 타인과 정신을 바꿀 수 있다
	CALL CARD_UI(1655,1)
	PRINTFORMW 캐슬린은 다른 몸에 깃들어 마음대로 움직일 수 있다는 것이다
	PRINTFORMW 이걸 사용하면……
	PRINTL
	PRINTL [0] - 악용은 그만두겠다
	IF FLAG:악랄치 > 65
		PRINTL [1] - 여러 여자애들의 몸 무제한 사용!
	ELSE
		PRINTL [1] - 다른 여자아이의 몸으로 할 수 있다⋯？
	ENDIF
	BINPUT
	IF RESULT == 0
		PRINTL
		PRINTFORMW 그만두자…
		PRINTFORMW 그런 것보다 듀얼하러 갈까!
		CALL EVENT_TIMER(5)
		RETURN 3
	ELSEIF RESULT == 1
		PRINTL
		PRINTFORMW 좋아
		PRINTFORMW 당장 캐슬린을 불러서 부탁해 보자…
		CALL EVENT_MOVE(이벤트主,CFLAG:MASTER:현재위치)
		CALL EVENT_TIMER(5)
		依頼_場所 = 場所_寝室
		依頼_달성상황 ++
	ENDIF

ELSEIF 依頼_달성상황 == 1
	PRINTFORMW 캐슬린에게 부탁해 보자…
	PRINTFORMW ⋯⋯⋯⋯
	PRINTFORMW ⋯⋯⋯
	PRINTFORMW ⋯⋯
	IF TALENT:이벤트主:연모 > 0 || デバッグシステム
		PRINTFORMW 캐슬린은 %CALLNAME:MASTER%의 부탁이라면 얼굴을 붉히며 들어주었다!
	ELSE
		PRINTFORMW 거절당했다…
		SETCOLOR C_YELLOW
		PRINTFORMW 캐슬린과 더 친해지면 부탁을 들어줄지도 모른다
		RESETCOLOR
		CALL EVENT_TIMER(5)
		RETURN 3
	ENDIF
	PRINTFORML
	PRINTFORMW 적당한 여자아이를 소환해서 시험해 보자
	$DUEL_LOOP
	TARGET = -1
	詰め플래그 = 1
	CALL DUEL_SYSTEM(1,310,,1)
	IF RESULT != 1
		PRINTFORMW 한 번 더!
		GOTO DUEL_LOOP
	ENDIF
	PRINTFORML
	PRINTFORMW 이쯤 해두자
	PRINTFORMW 캐슬린은 앞으로도 여러 몸으로 응해 줄 것 같다…
	SETCOLOR C_YELLOW
	PRINTFORML 
	CALL CARD_GET_SINGLE(59640,0,3)
	RESETCOLOR
	CALL EVILTY_POINT(30)
	CALL EVENT_TIMER(60)
	RETURN 2
ENDIF

