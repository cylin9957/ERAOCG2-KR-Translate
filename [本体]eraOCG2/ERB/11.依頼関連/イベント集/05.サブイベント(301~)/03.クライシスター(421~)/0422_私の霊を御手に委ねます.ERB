	IF RESULT == 0
		PRINTFORMW "그럼, 즐겨 주세요"
		TARGET = -1
		CALL CHOICE_DUEL_TYPE(422)
		
		PRINTFORMW 이것이 "크라이시스터"
		PRINTFORMW 확실히 "엑소시스터"보다 효과가 강해져 있었다.
