	SELECTCASE 目標위치
	CASE 場所_依頼用エリア０
		依頼用エリア０名称 = %エリア名지정%
	CASE 場所_依頼用エリア１
		依頼用エリア１名称 = %エリア名지정%
	CASE 場所_依頼用エリア２
		依頼用エリア２名称 = %エリア名지정%
	CASE 場所_依頼用エリア３
		依頼用エリア３名称 = %エリア名지정%
	CASE 場所_依頼用エリア４
		依頼用エリア４名称 = %エリア名지정%
	CASE 場所_依頼用エリア５
		依頼用エリア５名称 = %エリア名지정%
	CASE 場所_依頼用エリア６
		依頼用エリア６名称 = %エリア名지정%
	CASE 場所_依頼用エリア７
		依頼用エリア７名称 = %エリア名지정%
	CASE 場所_依頼用エリア８
		依頼用エリア８名称 = %エリア名지정%
	CASE 場所_依頼用エリア９
		依頼用エリア９名称 = %エリア名지정%

	CASE 場所_依頼用寝室エリア
		依頼用寝室エリア名称 = %エリア名지정%
	CASE 場所_依頼用浴室エリア
		依頼用寝室エリア名称 = %エリア名지정%
	CASE 場所_依頼用듀얼エリア
		依頼用듀얼エリア名称 = %エリア名지정%
	ENDSELECT
ENDIF

IF 캐릭터_ID == MASTER
	SETCOLOR C_GREEN
	PRINTL
PRINTFORMW >> %CALLNAME:MASTER%은/는 %GETPLACENAME(目標위치)%까지 이동했습니다.
	RESETCOLOR
ENDIF

@EVENT_DOUKOU(캐릭터_ID,동행時間)
#DIM DYNAMIC 캐릭터_ID
#DIM DYNAMIC 동행時間
#DIM DYNAMIC 上書き플래그

