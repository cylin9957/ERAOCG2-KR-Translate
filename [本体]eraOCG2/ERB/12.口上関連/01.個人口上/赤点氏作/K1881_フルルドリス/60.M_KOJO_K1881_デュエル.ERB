	ELSEIF カードID == 11881
		PRINTFORMW "%カード名%를 소환.　……이봐 너, 지금 이상한 데 본 거 아니지?"
	ELSEIF カードID == 1884
		PRINTFORMW "큿, 별로 내키진 않지만……　%カード名%를 소환!"
	ELSE
		SELECTCASE RAND:3 + 1
			CASE 1
				PRINTFORML "%カード名%를 소환."
			CASE 2
				PRINTFORML "부탁한다, %カード名%!"
			CASE 3
				PRINTFORML "좋아, 간다 %カード名%!"
		ENDSELECT
	ENDIF
ENDIF


