;==================================================
;3,특수モンスター소환
;==================================================
@M_KOJO_DUEL_K1881_3(カードID,ARG:1)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIMS DYNAMIC カード名
#DIM DYNAMIC カード種
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%

TRYCALLFORM CARD_{カードID}("종류")
カード種 = RESULT

;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SELECTCASE カード種
		;의식소환
		CASE 의식
			PRINTFORML "의식소환!　나타나라, %カード名%!"
		;융합소환
		CASE 융합
			IF カードID == 50600
				PRINTFORMW "네 힘을 빌리는 건 자존심 상하지만, 간다 알버스!
				PRINTFORMW 　%カード名%를 융합소환!"
			ELSEIF カードID == 50601
				PRINTFORMW "뭔가 신기한 모습인 것 같지만, 뭐 괜찮아.　가라 알버스!
				PRINTFORMW 　%カード名%를 융합소환!"
			ELSEIF カードID == 50602
				PRINTFORMW "흥, 힘은 빌리지만 인정한 건 아니니까!
				PRINTFORMW 　%カード名%를 융합소환!"
			ELSEIF カードID == 50603
				PRINTFORMW "간다 알버스!
				PRINTFORMW 　%カード名%를 융합소환!"
			ELSEIF カードID == 50604
				PRINTFORMW "좋아, 준비는 되어 있겠지!?
				PRINTFORMW 　%カード名%를 융합소환!"
			ELSE
				PRINTFORML "융합소환!　간다, %カード名%!"
			ENDIF
		;싱크로소환
		CASE 싱크로
			PRINTFORML "싱크로소환!　나와라, %カード名%!"
		;엑시즈소환
		CASE 엑시즈
			PRINTFORML "엑시즈소환!　와라, %カード名%!"
		;링크소환
		CASE 링크
			PRINTFORML "%カード名%를 링크소환!"
		;遊戯王作品以外のEXのモンスター
		CASE 초차원
			PRINTFORML "초차원소환!　가라, %カード名%!"
	ENDSELECT
ENDIF

