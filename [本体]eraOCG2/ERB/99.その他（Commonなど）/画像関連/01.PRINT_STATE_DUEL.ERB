	SPRITEDISPOSE @"{SPR値}_TARGET"
	SPRITECREATE @"{SPR値}_TARGET", SPR値
ELSE
	SPRITEDISPOSE @"{NO:캐릭터_ID}_FACE"
	SPRITECREATE @"{NO:캐릭터_ID}_FACE", SPR値
