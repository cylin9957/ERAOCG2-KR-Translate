		ENDIF

		GDISPOSE 2030
		IF ENUMFILES("RESOURCES/WAKU", @"WAKU_DUEL.*")
			SPLIT RESULTS, "\\", RESULTS
			GCREATEFROMFILE 2030, "WAKU/"+RESULTS:(RESULT-1)
			SPRITECREATE @"WAKU_DUEL", 2030
		ENDIF
		GDRAWSPRITE GDI値, @"WAKU_DUEL",0,0,GRAPH_SIZE,GRAPH_SIZE		
