			HTML_PRINT 캐릭터_HTML,1
		ENDIF
		IF 顔플래그 != 2
			FOR カウンタ,0,(25 * 倍率) 
				PRINTL
			NEXT
		ENDIF
		RETURN 1
	ELSE
		RETURN 0
	ENDIF
ENDIF

;カード화상があったらコッチを優先する。/PRINTSTATE표시なら必ずここを通る
