@CARD_EXPLANATION_73187(種類)
#DIM DYNAMIC 種類

PRINTL 自分フィールドの「ギャラクシーアイズ」Xモンスターにのみ装備可能。
PRINTL このカード名の②の効果は１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(0,永続効果)
PRINTL ①：装備モンスターは相手の魔法・罠カードの効果を受けない。
CALLFORM CARD_ABLE(1,魔罠起動 ,フリー誘発)
PRINTL ②：自分・相手ターンに、自分の墓地・除外状態の光属性モンスター１体を対象として発動できる
PRINTL （「銀河眼の光子竜」を対象として発動した場合、装備モンスターを覚醒状態にする）。
PRINTL そのカードをデッキに戻し、装備モンスターのX素材を１つ増やす。
PRINTL その後、装備モンスターが覚醒状態の場合、装備モンスターのX素材を１つ増やし、
PRINTL 自分のデッキ・墓地・除外状態のカードを１枚選んで手札に加える。

@CARDCAN_73187(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
CALL 装備判定(決闘者,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,73187)
SIF RESULT == 1
	RETURN 0
IF (種類 == 魔罠起動 || 種類 == フリー誘発) && GETVAR(@"%決闘者%_戦場:装備先") != -1
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF 発動済_2(決闘者,73187)
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果範囲除外 = 1
	効果条件属性 = 光属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 魔罠起動 || 種類 == 手札起動
	IF ゾーン == "魔罠"
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = ギャラクシーアイズ
	効果条件種類 = エクシーズ
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73187(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先


CALL 装備判定(決闘者,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%


IF (種類 == 魔罠起動 || 種類 == フリー誘発) && GETVAR(@"%決闘者%_戦場:装備先") != -1
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,73187,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果範囲除外 = 1
		効果条件属性 = 光属性
		効果条件行先フラグ = デッキ行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択カードID = RESULT:1
			TRYCALLFORM CARDNAME_{選択カードID}, "名前"
			選択カード名 = %RESULTS%
			SIF 選択カード名 == "ギャラクシーアイズ・フォトン・ドラゴン"
				CALL SET_FIELD_INFO(決闘者,"戦場",装備先,"条達",2,1)
			CALL FULLRESET
			CALL SET_FIELD_INFO(決闘者,"戦場",装備先,"Ｘ",1)
			IF GETVAR(@"%決闘者%_MZ_条達:装備先") != 0
				CALL SET_FIELD_INFO(決闘者,"戦場",装備先,"Ｘ",1)
				CALL FULLRESET
				効果範囲デッキ = 1
				効果範囲墓地 = 1
				効果範囲除外 = 1
				CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 種類 == 魔罠起動 || 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,73187)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件カテゴリ = ギャラクシーアイズ
		効果条件種類 = エクシーズ
		CALLFORM CARD_EQUIP_ADV(決闘者,場所,ゾーン)
	ENDIF
ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"装備",場所,"魔耐")
	CALL STATCHANGE_EFFECT(決闘者,"装備",場所,"罠耐")
ENDIF