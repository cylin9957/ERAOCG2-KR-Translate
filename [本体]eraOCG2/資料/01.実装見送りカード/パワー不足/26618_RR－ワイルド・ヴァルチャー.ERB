	CASE "名前"
		RESULTS = RR－ワイルド・ヴァルチャー
	CASE "略称"
		RESULTS = ワイルド・Ｖ
	CASE "カテゴリ"
		RESULTS:0 = レイドラプターズ
ENDSELECT


