@CARDCAN_26602(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,26602)
SIF RESULT == 1
	RETURN 0

IF 種類 == X素材時効果
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種類 = エクシーズ
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 効果後誘発
	SIF 発動済_2(決闘者,26602)
		RETURN 0
	SIF ゾーン != "墓地"
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種類 = エクシーズ
	CALL CARD_CHECK_FIN_DATA(決闘者,"効果発動")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = レイドラプターズ
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26602(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

IF 種類 == X素材時効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,26602)
	IF RESULT == 0
		CALL FULLRESET
		効果条件種類 = エクシーズ
		CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(決闘者,"戦場",選択カード,"永攻",300)
		ENDIF
	ENDIF
ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,26602,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果条件カテゴリ = レイドラプターズ
		CALL CARD_ADD_BASIC(決闘者,"墓地",ゾーン,場所)
	ENDIF
ENDIF
