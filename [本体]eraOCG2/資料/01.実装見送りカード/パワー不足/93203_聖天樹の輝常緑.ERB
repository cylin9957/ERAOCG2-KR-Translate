@CARDNAME_93203,参照先
;ココで指定カードの名前、略称を返す予定
;　
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = サンアバロン・グローリアス・グロース
	CASE "略称"
		RESULTS = 聖天樹の輝常緑
	CASE "カテゴリ"
		RESULTS:0 = サンアバロン
		RESULTS:1 = ゲームオリジナル
ENDSELECT


@CARD_93203(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 永続罠
ENDSELECT

RETURN 0

@CARD_EXPLANATION_93203(種類)
#DIM DYNAMIC 種類

PRINTL このカード名の②④の効果はそれぞれ１ターンに１度しか使用できない。
PRINTL ①：自分フィールドに「サンアバロン」Lモンスターが存在しない場合、このカードは破壊される。
PRINTL ②：自分フィールドに「サンアバロン」Lモンスターが存在し、
PRINTL 自分が戦闘・効果でダメージを受けた場合に発動できる。デッキ外から「聖種の地霊」１体を生成し、
PRINTL 自分フィールドのモンスターを素材として植物族LモンスターのL召喚を行う。
PRINTL ③：自分のLPが回復した場合に発動する。その数値分だけ相手にダメージを与える。
PRINTL ④：相手の攻撃宣言時、自分フィールドのLモンスター１体を対象として発動できる。
PRINTL 攻撃対象をそのモンスターに移し替えてダメージ計算を行う。


@CARDCAN_93203(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,93203)
SIF RESULT == 1
	RETURN 0

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 効果後誘発 || 種類 == 攻撃後強制誘発 || 種類 == 発動強制誘発
	SIF ゾーン != "魔罠"
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種類 = リンク
	効果条件カテゴリ = サンアバロン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	IF RESULT == 1
		IF 発動済_2(決闘者,93203) != 1
			CALL CARD_CHECK_FIN_BIT(決闘者,"被弾者")
			SIF RESULT != 1
				RETURN 0
		ELSE
			RETURN 0
		ENDIF
	ELSE
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
	ENDIF
	RETURN 1
ELSEIF 種類 == ライフ変強制誘発
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF ダメージ増減 != "増加"
		RETURN 0
	SIF !GROUPMATCH(ダメージ種類,"効果")
		RETURN 0
	SIF ダメージ受者 != 決闘者
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻撃時誘発
	SIF 発動済_4(決闘者,93203)
		RETURN 0
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種類 = リンク
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 魔罠起動
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_93203(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 効果後誘発 || 種類 == 攻撃後強制誘発 || 種類 == 発動強制誘発
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種類 = リンク
	効果条件カテゴリ = サンアバロン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	IF RESULT == 1
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,93203,2)
		IF RESULT == 0
			CALL CARD_GENERATE(決闘者,32200)
			CALL FULLRESET
			効果条件種族 = 植物族
			効果条件種類 = リンク
			効果条件召喚可 = 1
			CALL CARD_CHOOSE_BASIC(決闘者,"EXデッキ",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALLFORM RESETCONDITION
				選択カード_ID = GETVAR(@"%決闘者%_EXデッキ:選択カード")
				TRYCALLFORM CARDSUMMON_{選択カード_ID}(決闘者,選択カード)
				TRYCALLFORM LINSUMMON(決闘者,選択カード)
			ENDIF
		ENDIF
	ELSE
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == ライフ変強制誘発
	CALL LIFE_CHANGE(決闘者,"減少","効果",ダメージ受値,1)
ELSEIF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,93203,4)
	IF RESULT == 0
		CALL FULLRESET
		効果条件種類 = リンク
		CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL COVER_ATTACK(決闘者,選択カード)
		ENDIF
	ENDIF
ELSEIF 種類 == 魔罠起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,93203)
	IF RESULT == 0
	ENDIF
ENDIF
