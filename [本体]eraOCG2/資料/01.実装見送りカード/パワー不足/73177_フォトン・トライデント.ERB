CALLFORM CARD_ABLE(0,ライフ変強制誘発)
PRINTL ③：装備モンスターが相手に戦闘ダメージを与えた場合、
PRINTL フィールドのカード１枚を対象として発動できる。
PRINTL そのカードを破壊する。

@CARDCAN_73177(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者

CALL 装備判定(決闘者,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,73177)
SIF RESULT == 1
	RETURN 0
IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	IF ゾーン == "手札"
		SIF ターンプレイヤー != 決闘者
			RETURN 0
	ELSEIF ゾーン == "魔罠"
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = フォトン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻守変動 || 種類 == 永続効果
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ELSEIF 種類 == ライフ変強制誘発
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF ダメージ受者 == 決闘者
		RETURN 0
	SIF !GROUPMATCH(ダメージ種類,"直接戦闘","戦闘")
		RETURN 0
	SIF 戦闘場所(決闘者) != 装備先
		RETURN 0
	IF 決闘者 == "自分"
		CALL FULLRESET
		効果範囲相手戦場 = 1
		効果範囲相手魔罠 = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_73177(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者


CALL 装備判定(決闘者,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%


IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,73177)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件カテゴリ = フォトン
		CALLFORM CARD_EQUIP_ADV(決闘者,場所,ゾーン)
	ENDIF
ELSEIF 種類 == 攻守変動
	CALL STATCHANGE_BASIC(決闘者,"装備",場所,700)
ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"装備",場所,"貫通")
ELSEIF 種類 == ライフ変強制誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,73177)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"両全場単体",場所,"墓地")
	ENDIF
ENDIF