@CARDCAN_23184(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,23184)
SIF RESULT == 1
	RETURN 0



IF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,23184)
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻守変動
	SIF ゾーン != "戦場" 
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = フォトン
	効果条件種類 = モン全般
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23184(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,23184,1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件属性 = 光属性
		効果条件種類 = モン全般
		CALLFORM 効果条件レベル_ADV(3, "以下")
		CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
	ENDIF
ELSEIF 種類 == 攻守変動
	CALL STATCHANGE_BASIC(決闘者,"自身",場所,-800)
ENDIF

