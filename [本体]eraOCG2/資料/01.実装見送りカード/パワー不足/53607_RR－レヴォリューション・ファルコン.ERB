@CARDCAN_53607(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,53607)
SIF RESULT == 1
	RETURN 0
IF 種類 == EX召喚時強制 
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種類 = エクシーズ
	効果条件カテゴリ = レイドラプターズ
	CALLFORM 効果条件レベル_ADV(5, "以下")
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	IF GETVAR(@"%決闘者%_MZ_条達:場所") != 0
		SIF 発動済_1(決闘者,53607) && 効果発動済(決闘者,場所,ゾーン)
			RETURN 0
	ELSE
		SIF 発動済_1(決闘者,53607)
			RETURN 0
	ENDIF
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF モンスター数(対面者) <= 0
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻撃時強制誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF GETVAR(@"%対面者%_MZ_召種:%対面者%_戦闘カード") == 召種通常
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_53607(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力上昇
#DIM 選択カード


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EX召喚時強制 
	CALL SET_FIELD_INFO(決闘者,"戦場",場所,"条達",2,1)
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,53607,0,X消費1)
	IF RESULT == 0
		IF GETVAR(@"%決闘者%_MZ_条達:場所") != 0
			IF 発動済_1(決闘者,53607) == 0 && 効果発動済(決闘者,場所,ゾーン) == 0
				CALL YN_CHOICE(決闘者,"①相手モンスター全てに１回ずつ攻撃できる","③モンスターを破壊して攻撃力の半分のダメージ")
			ELSEIF 発動済_1(決闘者,53607)
				RESULT = 1
			ELSE
				RESULT = 0
			ENDIF
		ELSE
			RESULT = 0
		ENDIF
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,53607,1)
			CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"連戦",1)
		ELSEIF RESULT == 1
			CALL FULLRESET
			CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,53607,10)
			効果追加種類 = 2
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"墓地",53607)
		ENDIF
	ENDIF
ELSEIF 種類 == 攻撃時強制誘発
	CALL FULLRESET
	効果追加種類 = 10
	CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",戦闘場所(決闘者,1),"永攻DOWN",99999)
ENDIF
