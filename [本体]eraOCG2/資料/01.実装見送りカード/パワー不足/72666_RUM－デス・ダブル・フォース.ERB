@CARDCAN_72666(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ

CALL 対面者判定(決闘者)
対面者 = %RESULTS%
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,72666)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	IF ゾーン == "手札"
		SIF ターンプレイヤー != 決闘者
			RETURN 0
	ELSEIF ゾーン == "魔罠"
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 発動済_1(決闘者,72666) == 0
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,0,"墓地")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = レイドラプターズ
	効果条件種類 = エクシーズ
	効果条件重ねてＸ = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 効果後誘発
	CALL FULLRESET
	効果条件カテゴリ = レイドラプターズ
	CALL CARD_CHECK_FIN_DATA(決闘者,"戦闘破壊")
	SIF RESULT != 1
		RETURN 0
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72666,1)
ELSEIF 種類 == ターン終了時強制
	RETURN 1
ENDIF



@CARDEFFECT_72666(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 設定レベル
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72666)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		;通常魔法汎用処理
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件種類 = エクシーズ
		効果条件カテゴリ = レイドラプターズ
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			設定レベル = GETVAR(@"%決闘者%_MZ_星:カード召喚先") * 2
			CALL FULLRESET
			効果条件レベル = 設定レベル
			効果条件種類 = エクシーズ
			CALL CARD_CHOOSE_BASIC(決闘者,"EXデッキ",ゾーン,場所)
			選択カード = RESULT
			;戻る
			IF 選択カード != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%決闘者%_EXデッキ:{選択カード}")}(決闘者,選択カード)
				CALL RESETCONDITION_MAT(1)
				代替素材数 = 1
				重ねてＸ = 1
				素材条件固定 = カード召喚先
				TRYCALLFORM XYZSUMMON(決闘者,選択カード)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72666,1)
ENDIF
