VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 極氷獣ポーラ・ペンギン
	CASE "略称"
		RESULTS = ポーラ・ペンギン
	CASE "カテゴリ"
		RESULTS:0 = ペンギン
ENDSELECT


@CARD_0000(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 効果モン
	CASE "属性"
		RETURN 水属性
	CASE "種族"
		RETURN 鳥獣族
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 800
	CASE "守備力"
		RETURN 1000
	CASE "チューナー"
		RETURN 1
ENDSELECT

