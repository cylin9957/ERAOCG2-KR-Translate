@CARDCAN_73174(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件達成,5

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,73174)
SIF RESULT == 1
	RETURN 0
IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF 発動済_1(決闘者,73174)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF モンスター数(決闘者) >= 5
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ:0 = フォトン
	効果条件カテゴリ:1 = ギャラクシー
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件名前 = ギャラクシーアイズ・フォトン・ドラゴン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT == 1
		条件達成 = 1
	CALL FULLRESET
	効果範囲相手戦場 = 1
	SIF 条件達成 != 1
		効果条件種類 = エクシーズ
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73174(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 種類 == 魔罠起動 || 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,73174,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL LIFE_CHANGE(決闘者,"減少","コスト",1000)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"強奪")
	ENDIF
ENDIF