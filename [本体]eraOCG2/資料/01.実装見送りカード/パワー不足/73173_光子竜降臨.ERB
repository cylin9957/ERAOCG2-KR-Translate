@CARDCAN_73173(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件達成,5

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,73173)
SIF RESULT == 1
	RETURN 0
IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲戦場 = 1
	素材範囲手札 = 1
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件種類 = 儀式
	効果条件名前 = ナイト・オブ・フォトンドラゴン
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 墓地起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲墓地 = 1
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件種類 = 儀式
	効果条件名前 = ナイト・オブ・フォトンドラゴン
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73173(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,73173)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL RESETAREA_MAT
		IF 種類 == 墓地起動
			素材範囲墓地 = 1
		ELSE
			素材範囲手札 = 1
			素材範囲戦場 = 1
		ENDIF
		CALL FULLRESET
		効果範囲手札 = 1
		効果条件名前 = ナイト・オブ・フォトンドラゴン
		効果条件召喚可 = 1
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択カード -= 100
			CALL RESETAREA_MAT
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%決闘者%_手札:{選択カード}")}(決闘者,選択カード)
			IF 種類 == 墓地起動
				素材範囲墓地 = 1
			ELSE
				素材範囲手札 = 1
				素材範囲戦場 = 1
			ENDIF
			TRYCALLFORM RITSUMMON(決闘者, 選択カード,"手札")
		ENDIF
	ENDIF
ENDIF

