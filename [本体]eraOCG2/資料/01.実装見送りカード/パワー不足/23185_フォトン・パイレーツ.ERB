@CARDCAN_23185(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,23185)
SIF RESULT == 1
	RETURN 0



IF 種類 == 戦場起動
	SIF 発動済_1(決闘者,23185)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = フォトン
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場→墓地
	SIF 発動済_2(決闘者,23182)
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,0,"除外")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲除外 = 1
	効果条件カテゴリ = フォトン
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23185(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 除外枚数

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,23185,1)
	IF RESULT == 0
		REPEAT 2
			CALL FULLRESET
			効果条件種類 = モン全般
			効果条件カテゴリ = フォトン
			効果条件任意 = 1
			CALL CARD_ADD_GY_BASIC(決闘者,"墓地",ゾーン,場所)
			SIF RESULT != 1
				BREAK
			除外枚数 = 除外枚数 + 1
		REND
		CALL FULLRESET
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"一攻",除外枚数*1000)
	ENDIF
ELSEIF 種類 == 戦場→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,23185,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲除外 = 1
		効果条件カテゴリ = フォトン
		効果条件種類 = モン全般
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF

