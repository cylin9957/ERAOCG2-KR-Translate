		RESULTS = ギャラクシー・プリースト
	CASE "略称"
		RESULTS = 銀河の修道師
	CASE "カテゴリ"
		RESULTS:0 = ギャラクシー
ENDSELECT


@CARD_23176(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;効果モン/通常モン/儀式/融合/シンクロ/エクシーズ/リンク/超次元
	CASE "種類"
		RETURN 効果モン
	;闇属性/光属性/地属性/水属性/炎属性/風属性
	CASE "属性"
		RETURN 光属性

	CASE "種族"
		RETURN 魔法使い族
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 600
ENDSELECT
RETURN 0

@CARD_EXPLANATION_23176(種類)
#DIM DYNAMIC 種類

PRINTL このカード名の①②の効果は１ターンに１度、いずれか１つしか使用できない。
CALLFORM CARD_ABLE(1,手札起動)
PRINTL ①:自分フィールドの「フォトン」Ｘモンスターまたは「ギャラクシー」Ｘモンスター１体を対象として発動できる。
PRINTL 手札のこのカードを墓地に送り、対象のモンスターのＸ素材を１つ増やす。
CALLFORM CARD_ABLE(1,召喚時 ,特殊召喚時)
PRINTL ②:このカードが召喚・特殊召喚に成功した場合、自分の墓地の「フォトン」カード及び「ギャラクシー」カードの中から、
PRINTL 合計５枚を対象として発動できる（同名カードは１枚まで）。
PRINTL そのカードをデッキに加えてシャッフルする。その後、自分はデッキから２枚ドローする。

@CARDCAN_23176(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,23176)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF 発動済_1(決闘者,23176)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ:0 = フォトン
	効果条件カテゴリ:1 = ギャラクシー
	効果条件種類 = エクシーズ
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,23175)
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ:0 = フォトン
	効果条件カテゴリ:1 = ギャラクシー
	効果条件固名前起動 = 1;CARDCHECK_ADV専用
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT <= 4
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23176(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 手札起動
CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,23176,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果条件カテゴリ:0 = フォトン
		効果条件カテゴリ:1 = ギャラクシー
		効果条件種類 = エクシーズ
		CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(決闘者,"戦場",選択カード,"Ｘ",1)
		ENDIF
	ENDIF
ELSEIF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,23176,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ:0 = フォトン
		効果条件カテゴリ:1 = ギャラクシー
		効果条件複数 = 5
		効果条件固名前選択 = 1
		効果条件行先フラグ = デッキ行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL CARDDRAW_BASIC(決闘者,2)
		ENDIF
	ENDIF
ENDIF
