@CARD_EXPLANATION_93170(種類)
#DIM DYNAMIC 種類
CALLFORM CARD_ABLE(0,攻撃時誘発)
PRINTL ①：相手モンスターの攻撃宣言時に発動できる。その攻撃を無効にする。
PRINTL その後、自分フィールドの光属性モンスターの攻撃力はターン終了時まで攻撃したモンスターの攻撃力分アップする。

@CARDCAN_93170(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 効果先
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,93170)
SIF RESULT == 1
	RETURN 0
IF 種類 == 攻撃時誘発
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件属性 = 光属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_93170(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,50126)
	IF RESULT == 0
		;通常魔法汎用処理
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		攻撃力修正 = GETVAR(@"%対面者%_MZ_攻:(%対面者%_戦闘カード)")

		CALL EVADE_ATTACK(決闘者)
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件属性 = 光属性
		CALL CARD_GRANT_ADV(決闘者,ゾーン,場所,"一攻",攻撃力修正)
	ENDIF
ENDIF
