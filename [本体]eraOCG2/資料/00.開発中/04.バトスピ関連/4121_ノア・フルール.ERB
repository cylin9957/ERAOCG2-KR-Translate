@CARDNAME_4121,参照先
;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4121)

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = ノア・フルール
	CASE "略称"
		RESULTS = ノア
	CASE "カテゴリ"
		RESULTS:0 = 詩姫
		RESULTS:4 = バトルスピリッツ
		IF TALENT:カード主:愛妻
			RESULTS:1 = 契約
		ENDIF
ENDSELECT


@CARD_4121(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "種類"
	
		RETURN 効果モン
