@CARDNAME_4126,参照先
;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4126)

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = ゼクシア・テンマ
	CASE "略称"
		RESULTS = ゼクシア
	CASE "カテゴリ"
		RESULTS:0 = 詩姫
		RESULTS:4 = バトルスピリッツ
		IF TALENT:カード主:愛妻
			RESULTS:1 = 契約
		ENDIF
ENDSELECT


@CARD_4126(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "種類"
	
		RETURN 効果モン
	CASE "属性"
		RESULT:1 = 風属性
		RETURN 地属性
	CASE "種族"
		RETURN 機械族
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1400
	CASE "守備力"
		RETURN 500
	CASE "性別"
		RETURN 牝性
ENDSELECT

RETURN 0

@CARD_EXPLANATION_4126(種類)
#DIM DYNAMIC 種類
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4126)

IF TALENT:カード主:愛妻
	PRINTL このカードの属性は風として扱う。
	PRINTL このカード名の①③の効果はそれぞれ１ターンに１度しか使用できない。
	CALLFORM CARD_ABLE(1,手札起動)
	PRINTL ①：自分フィールドのコアカウンターを１つ取り除いて発動できる。
	PRINTL このカードを手札から特殊召喚する。
	CALLFORM CARD_ABLE(0,永続効果)
	PRINTL ②：自分の墓地のいずれかのモンスターと同じ属性を持つ自分のモンスターは破壊耐性を得る。
	PRINTL 自分の魔法・罠ゾーンの「創界神」に置かれたコアカウンターの数が１０個以上の場合、
	PRINTL 自分のターンに自分フィールドの「モンスターは完全耐性を得る。
	CALLFORM CARD_ABLE(3,戦場起動)
	PRINTL ③：自分の魔法・罠ゾーンの「創界神」にコアカウンターを２つ置くことで発動できる。
	PRINTL 相手フィールドのモンスター１体を選択できる。
	PRINTL そのモンスターの攻撃力を自分フィールドのモンスターの属性の種類×１０００ポイントダウンする。
	PRINTL この効果で攻撃力、または守備力が０になった場合、さらにそのモンスターを墓地に送る。
ELSE
	PRINTL このカードの属性は風として扱う。
	CALLFORM CARD_ABLE(0,永続効果)
	PRINTL ①：自分の墓地のいずれかのモンスターと同じ属性を持つ自分のモンスターは破壊耐性を得る。
ENDIF

@CARDCAN_4126(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4126)

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,4126)
SIF RESULT == 1
	RETURN 0


IF 種類 == 手札起動
	IF TALENT:カード主:愛妻
		SIF 発動済_1(決闘者,4126)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 決闘者
			RETURN 0
		CALL CARD_SS_CHECK(決闘者,4126,"手札")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件カテゴリ = バトルスピリッツ
		効果条件表示 = 表側表示
		効果条件CNT = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT:9 < 1
			RETURN 0
	ELSE
		RETURN 0	
	ENDIF
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	IF TALENT:カード主:愛妻
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 決闘者
			RETURN 0
		SIF 発動済_3(決闘者,4126)
			RETURN 0
		CALL FULLRESET
		効果範囲魔罠 = 1
		効果条件表示 = 表側表示
		効果条件カテゴリ = 創界神
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSE
		RETURN 0	
	ENDIF
ENDIF

@CARDEFFECT_4126(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 軽減数
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4126)


IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4126,1)
	IF RESULT == 0
		PRINTL コアカウンターを取り除くカードを選択
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件カテゴリ = バトルスピリッツ
		効果条件表示 = 表側表示
		効果条件個Ｃ所持 = 1
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		IF RESULT != 9999
			PRINTL コアが取り除かれました
			CALL CARD_SELECT(決闘者,RESULT)
			CALL SET_FIELD_INFO(対象者（CS）,参照先（CS）,選択カード（CS）,"個Ｃ",-1)

			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 種類 == 永続効果
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件属性 = 風属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		効果条件属性 = 風属性
		効果条件表示 = 表側表示
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")
	ENDIF

	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件属性 = 炎属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		効果条件属性 = 炎属性
		効果条件表示 = 表側表示
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")
	ENDIF

	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件属性 = 地属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		効果条件属性 = 地属性
		効果条件表示 = 表側表示
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")
	ENDIF

	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件属性 = 水属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		効果条件属性 = 水属性
		効果条件表示 = 表側表示
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")
	ENDIF

	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件属性 = 光属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		効果条件属性 = 光属性
		効果条件表示 = 表側表示
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")
	ENDIF

	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件属性 = 闇属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		効果条件属性 = 闇属性
		効果条件表示 = 表側表示
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")
	ENDIF

	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件属性 = 神属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		効果条件属性 = 神属性
		効果条件表示 = 表側表示
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")
	ENDIF

	IF TALENT:カード主:愛妻
		CALL FULLRESET
		効果範囲魔罠 = 1
		効果条件カテゴリ = 創界神
		効果条件表示 = 表側表示
		効果条件CNT = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT:9 < 10
			RETURN 0
		SIF ターンプレイヤー != 決闘者
			RETURN 0

		CALL FULLRESET
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"モ耐")
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"魔耐")
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"罠耐")
	ENDIF
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4126,3)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲魔罠 = 1
		効果条件カテゴリ = 創界神
		効果条件表示 = 表側表示
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(決闘者,選択カード)
			CALL SET_FIELD_INFO(決闘者,参照先（CS）,選択カード（CS）,"個Ｃ",2)
		ENDIF

		CALL FULLRESET
		CALL FIELD_INFO_COUNT(決闘者,"属")
		攻撃力修正 = RESULT * 1000
		CALL FULLRESET
		効果条件表示 = 表側表示
		効果追加種類 = 11
		CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"永攻DOWN",攻撃力修正)
	ENDIF
ENDIF

