;ココで指定卡片の名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 惑乱魔奇诺
	CASE "略称"
		RESULTS = 奇诺(惑)
	CASE "カテゴリ"
		RESULTS:0 = 惑乱魔
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_40073(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 効果モン
	CASE "属性"
		RETURN 地属性
	CASE "種族"
		RETURN 昆虫族
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 650
	CASE "守備力"
		RETURN 2150
	CASE "性別"
		RETURN 牝性
ENDSELECT

