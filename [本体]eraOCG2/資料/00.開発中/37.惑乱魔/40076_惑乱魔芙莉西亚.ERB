@CARDCAN_40076(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 必要的卡
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,40076)
SIF RESULT == 1
	RETURN 0

IF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 発動済_1(決闘者,40076)
		RETURN 0
	CALL FULLRESET
	効果条件固名前 =  惑乱魔芙莉西亚
	効果範囲戦場 = 1
	効果条件表示 = 表側表示
	効果条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻撃時誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 発動済_2(決闘者,40076)
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0

	CALL FULLRESET
	効果条件固名前:0 = 惑乱魔芙莉西亚
	効果条件固名前:1 = 惑乱魔塞拉
	効果範囲戦場 = 1
	効果条件表示 = 表側表示
	効果条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻撃時強制誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	CALL FULLRESET
	効果条件固名前:0 =  惑乱魔芙莉西亚
	効果条件固名前:1 =  惑乱魔塞拉
	効果範囲戦場 = 1
	効果条件表示 = 表側表示
	効果条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1		

ELSEIF 種類 == 攻守変動
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_40076(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 守備力修正
#DIM DYNAMIC X消費
#DIM DYNAMIC X素材数
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 調教対象
#DIM DYNAMIC 蜜罐


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,40076,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件表示 = 表側表示
		効果条件固名前 =  惑乱魔芙莉西亚
		効果条件カテゴリ = 惑乱魔
		効果条件CNT = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		X消費 = RESULT
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"Ｘ",X消費)
		PRINTFORMW 芙莉西亚的エクシーズ素材{X消費}増加了！

		CALL CARD_LOADUP

		CALL FULLRESET
		効果範囲相手戦場 = 1
		効果条件攻撃力 = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			PRINTL 要选相手戦場1只攻撃力为0的怪兽当作「蜜罐」在对方魔罠表側表示放置吗?
			PRINTL [1] - 是
			PRINTL [2] - 但是我拒绝
			BINPUT
			IF RESULT == 1
				CALL FULLRESET
				効果範囲相手戦場 = 1
				効果条件攻撃力 = 1
				CALL CARD_CHOOSE_BASIC(決闘者,"相手戦場",ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					TRYCALLFORM CARD_{GETVAR(@"%対面者%_戦場:選択カード")}, "性別"
					IF RESULT == 牝性 || RESULT == ふたなり || RESULT == 雄性
						TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_戦場:選択カード")}("名前")
						調教対象 = GETVAR(@"%対面者%_戦場:選択カード")
						CALL FULLRESET
						効果追加カテ = 蜜罐
						CALL CARD_ADD(対面者,"戦場","魔罠",選択カード,"表側表示")

						CALL CARD_EROTICS(調教対象)
						IF RESULT != -1
							調教対象 = RESULT
							SETCOLOR C_PINK
							PRINTFORML
							PRINTFORMW 沉醉于芙莉西亚气味的%CALLNAME:調教対象%无力做出反抗,被改造成了生产"花蜜"的蜜罐……！
							PRINTFORML
							RESETCOLOR
							CALL EROTIC_MOVE("苗床捕縛",調教対象, -1, 100)
						ENDIF
					ELSE
						CALL FULLRESET
						CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",選択カード,"墓地")
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF

ELSEIF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,40076,2)
	IF RESULT == 0
		選択カード = 戦闘場所(決闘者,1)
		TRYCALLFORM CARD_{戦闘カードID(決闘者,1)}("性別")
		IF RESULT == 牝性
			TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_戦場:選択カード")}("名前")
			調教対象 = GETVAR(@"%対面者%_戦場:選択カード")
			CALL CARD_EROTICS(調教対象)
			IF RESULT != -1
				調教対象 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 大王花浓烈的雌臭味令%CALLNAME:調教対象%意识迷离,全身任由惑乱魔们肆意把玩。
				RESETCOLOR
				CALL EROTIC_MOVE("全身レズ愛撫",調教対象,NO_TO_CHARANUM(1371),50)
			ENDIF
		ENDIF
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件表示 = 表側表示
		効果条件カテゴリ = 惑乱魔
		効果条件CNT = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		守備力修正 = RESULT:3
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"一守",守備力修正)
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"表",2,1)
	ENDIF

ELSEIF 種類 == 攻撃時強制誘発
	CALL FULLRESET
	IF RESULT == 0
		IF 戦闘場所(決闘者,1) != 5
			CALL CARD_EROTICS(戦闘カードID(決闘者,1))
			IF RESULT != 0
				調教対象 = RESULT
			ENDIF
		ENDIF
		IF 調教対象 > 0
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORMW %CALLNAME:調教対象%想要直接对芙莉西亚进行攻击,却被附近的惑乱魔一起包围了。
			RESETCOLOR
		ENDIF
	ENDIF

ELSEIF 種類 == 攻守変動
	IF GETVAR(@"%決闘者%_MZ_Ｘ:場所") >= 0
		CALL FULLRESET
		X素材数 = GETVAR(@"%決闘者%_MZ_Ｘ:場所")
		攻撃力修正 = (1 + X素材数) * 200
		効果条件固カテゴリ = 蜜罐
		CALL STATCHANGE_BASIC(決闘者,"相手戦場",場所,-攻撃力修正,0,40076)
	ENDIF

ELSEIF 種類 == 永続効果
	IF GETVAR(@"%決闘者%_MZ_Ｘ:場所") >= 0
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"モ耐")
		CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"魔耐")
		CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"罠耐")
	ENDIF

	IF バトルフェイズ != 1
		CALL FULLRESET
		効果条件カテゴリ = 惑乱魔
		効果条件他所 = 1
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")
	ENDIF
ENDIF










