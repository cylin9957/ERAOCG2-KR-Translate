@CARDCAN_99070(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 效果限制达成
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,99070)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動
	IF 種類 == 手札起動
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件カテゴリ = 惑乱魔
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT == 1
		条件達成 ++

		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件カテゴリ = 惑乱魔
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			条件達成 ++
		SIF 条件達成 == 0
			RETURN 0

	ELSEIF 種類 == 魔罠起動
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
	ENDIF

	SIF 発動済_1(決闘者,99070)
		RETURN 0
	SIF 発動済_2(決闘者,99070)
		RETURN 0
	SIF モンスター数(決闘者) >= 5
		RETURN 0
	RETURN 1		

ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	SIF 発動済_1(決闘者,99070)
		RETURN 0
	SIF 発動済_2(決闘者,99070)
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0

	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲墓地 = 1
	効果条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_99070(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 设定レベル



CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 || 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,99070,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 惑乱魔
		効果条件種類 = モン全般
		効果追加種類 = 190
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所,"守備表示")
	ENDIF

ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,99070,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件カテゴリ = 惑乱魔
		効果条件行先フラグ = 手札行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲墓地 = 1
			効果条件カテゴリ = 惑乱魔
			効果条件種類 = モン全般
			CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所,"攻撃表示")
		ENDIF
	ENDIF
ENDIF








