	CASE "略称"
		RESULTS = 洞蒂亚(惑)
	CASE "カテゴリ"
		RESULTS:0 = 惑乱魔
		RESULTS:1 = 蜜穴
        RESULTS:2 = E.R.A
ENDSELECT


@CARD_99073(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 通常罠
	CASE "属性"
		RETURN 地属性
	CASE "種族"
		RETURN 植物族
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 200
	CASE "守備力"
		RETURN 2600
	CASE "性別"
		RETURN 牝性
	CASE "分割"
		RETURN 効果なし
ENDSELECT

RETURN 0

@CARD_EXPLANATION_99073(種類)
