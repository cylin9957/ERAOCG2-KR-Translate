CALLFORM CARD_ABLE(1,墓地起動,フリー誘発)
PRINTL ②：自分フィールド有「惑乱魔」エクシーズモンスタ或link2以上的「惑乱魔」リンクモンスタ,墓地のこのカードを除外して発動できる。
PRINTL 相手は墓地から持有性別のモンスター１体を特殊召喚する,この効果で特殊召喚したモンスター视为「蜜罐」。
CALL TEXT_DECORATION("ROGUE")


@CARDCAN_99073(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,99073)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || (種類 == フリー誘発 && ゾーン == "魔罠")
	SIF 発動済_1(決闘者,99073)
		RETURN 0
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF モンスター数(決闘者) >= 5
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,99073,"魔罠")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	効果範囲手札 = 1
	効果条件カテゴリ:0 = 惑乱魔
	効果条件カテゴリ:1 = 蜜穴
	効果条件種類:0 = モン全般
	効果条件種類:1 = 通常罠
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3 && RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	SIF 発動済_2(決闘者,99073)
		RETURN 0
	SIF モンスター数(対面者) >= 5
		RETURN 0

	CALL FULLRESET
	効果範囲相手墓地 = 1
	効果条件性別 = 性別在
	効果条件種類 = モン全般
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種類:0 = エクシーズ
	効果条件種類:1 = リンク
	効果条件レベル:0 = 2
	効果条件レベル:1 = 3
	効果条件レベル:2 = 4
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_99073(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 召喚カード
#DIM DYNAMIC 召喚カードID

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF (種類 == 魔罠起動 || (種類 == フリー誘発 && ゾーン == "魔罠")) && GETVAR(@"%決闘者%_魔_表:場所") == 3
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,99073,1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ:0 = 惑乱魔
		効果条件カテゴリ:1 = 蜜穴
		効果条件種類:0 = モン全般
		効果条件種類:1 = 通常罠
		CALL CARD_ADD_GY_BASIC(決闘者,"手札",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者, "魔罠", 場所, "守備表示")
			CALL FULLRESET
			PRINTL 要用自己戦場的怪兽进行エクシーズ召唤或リンク召唤吗？
			PRINTL [1] - 是
			PRINTL [2] - 但是我拒绝
			BINPUT
			IF RESULT == 1
				CALL FULLRESET
				効果範囲EXデッキ = 1
				効果条件カテゴリ = 惑乱魔
				効果条件種類:0 = エクシーズ
				効果条件種類:1 = リンク
				効果条件召喚可 = 1
				CALL CARD_CHOOSE_BASIC(決闘者, "",ゾーン,場所)
				召喚カード = RESULT
				IF 召喚カード != 9999
					召喚カードID = RESULT:99
					CALLFORM CARD_{召喚カードID}, "種類"
					IF RESULT == エクシーズ
						TRYCALLFORM CARDSUMMON_{召喚カードID}(決闘者,召喚カード)
						CALL XYZSUMMON(決闘者, 召喚カード)
					ELSEIF RESULT == リンク
						TRYCALLFORM CARDSUMMON_{召喚カードID}(決闘者,召喚カード)
						CALL LINSUMMON(決闘者, 召喚カード)
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF

ELSEIF 種類 == 魔罠起動 || (種類 == フリー誘発 && GROUPMATCH(ゾーン,"魔罠"))
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,99073,1)
	IF RESULT == 0
		CALL RESETCONDITION		
		CALL CARD_SP_SUMMON(決闘者,ゾーン,場所, "守備表示")
		CALL FULLRESET
		PRINTL 要用自己戦場的怪兽进行エクシーズ召唤或リンク召唤吗？
		PRINTL [1] - 是
		PRINTL [2] - 但是我拒绝
		BINPUT
		IF RESULT == 1
			CALL FULLRESET
			効果範囲EXデッキ = 1
			効果条件カテゴリ = 惑乱魔
			効果条件種類:0 = エクシーズ
			効果条件種類:1 = リンク
			効果条件召喚可 = 1
			CALL CARD_CHOOSE_BASIC(決闘者, "EXデッキ",ゾーン,場所)
			召喚カード = RESULT
			IF 召喚カード != 9999
				召喚カードID = RESULT:99
				CALLFORM CARD_{召喚カードID}, "種類"
				IF RESULT == エクシーズ
					TRYCALLFORM CARDSUMMON_{召喚カードID}(決闘者,召喚カード)
					CALL XYZSUMMON(決闘者, 召喚カード)
				ELSEIF RESULT == リンク
					TRYCALLFORM CARDSUMMON_{召喚カードID}(決闘者,召喚カード)
					CALL LINSUMMON(決闘者, 召喚カード)
				ENDIF
			ENDIF
		ENDIF
	ENDIF

ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,99073,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件性別 = 性別在
		効果条件種類 = モン全般
		效果追加カテ = 蜜罐
		CALL CARD_SP_SUMMON_ADV(対面者,ゾーン,場所)
	ENDIF
ENDIF