@CARDCAN_40072(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,40072)
SIF RESULT == 1
	RETURN 0

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,40072)
		RETURN 0
	SIF 発動済_2(決闘者,40072)
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動 ;&& GETVAR(@"%決闘者%_MZ_表:場所") == 1 || 種類 == フリー誘発
	SIF 発動済_1(決闘者,40072)
		RETURN 0
	SIF 発動済_2(決闘者,40072)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_表:場所") != 1
		RETURN 0

	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = 惑乱魔
	効果条件固名前 = 惑乱魔兰卡
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種類 = モン全般
	効果条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻撃時誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_表:場所") == 2
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻撃時強制誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_表:場所") == 2
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_40072(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 自己卡片
#DIM DYNAMIC 自己守備力修正
#DIM DYNAMIC 对方卡片
#DIM DYNAMIC 对方攻撃力修正
#DIM DYNAMIC 調教対象

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,40072,1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件種類 = モン全般
		効果条件カテゴリ = 惑乱魔
		CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
	ENDIF

ELSEIF 種類 == 戦場起動 ;&& GETVAR(@"%決闘者%_MZ_表:場所") == 1 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,40072,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = 惑乱魔
		効果条件固名前 = 惑乱魔兰卡
		効果条件行先フラグ = デッキ行き
		CALL CARD_ADD_GY_BASIC(決闘者,"戦場",ゾーン,場所)	
		IF RESULT == 1
			CALL FULLRESET
			効果範囲墓地 = 1
			効果条件種類 = モン全般
			効果条件カテゴリ = 惑乱魔
			CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,40072)
	IF RESULT == 0
		自己卡片 = 戦闘場所(決闘者)
		自己守備力修正 = GETVAR(@"%決闘者%_MZ_守:自己卡片")
		对方卡片 = 戦闘場所(決闘者,1)
		对方攻撃力修正 = GETVAR(@"%対面者%_MZ_攻:对方卡片")
		TRYCALLFORM CARD_{戦闘カードID(決闘者,1)}("性別")
		IF RESULT == 牝性
			調教対象 = GETVAR(@"%対面者%_戦場:对方卡片")
			CALL CARD_EROTICS(調教対象)
			IF RESULT != -1
				調教対象 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 被锁住的%CALLNAME:調教対象%一时无法挣脱,嘴唇被兰卡夺去,含有催淫成分的口水在二人体内交换着。
				RESETCOLOR
				CALL EROTIC_MOVE("ディープキス",調教対象,NO_TO_CHARANUM(1376))
			ENDIF
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",对方卡片,"永攻DOWN",800)

		ELSEIF RESULT == 雄性 || RESULT == ふたなり && (对方攻撃力修正 - 800 ) - 自己守備力修正 >= 0
			調教対象 = GETVAR(@"%対面者%_戦場:对方卡片")
			CALL CARD_EROTICS(調教対象)
			IF RESULT != -1
				調教対象 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 兰卡沉溺于交欢的快感，被%CALLNAME:調教対象%的肉棒彻底征服了……！
				RESETCOLOR
				CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1376),調教対象)
				IF 魔罠数(対面者) < 5
					SETCOLOR C_PINK
					PRINTFORMW 随后就那样被%CALLNAME:調教対象%当作肉铠带走了……
					RESETCOLOR
					CALL CARD_EQUIP_MONSTER(対面者,对方卡片,"相手戦場",自己卡片,(1 + 2))
				ENDIF
			ELSE
				CALLFORM CARDNAME_{GETVAR(@"%対面者%_戦場:对方卡片")}("名前")
				SETCOLOR C_PINK
				PRINTFORMW 兰卡沉溺于交欢的快感，被%RESULTS%的肉棒彻底征服了……！
				RESETCOLOR
				CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1376), -1)
				IF 魔罠数(対面者) < 5
					SETCOLOR C_PINK
					PRINTFORMW 随后就那样被%RESULTS%当作肉铠带走了……
					RESETCOLOR
					CALL CARD_EQUIP_MONSTER(対面者,对方卡片,"相手戦場",自己卡片,(1 + 2))
				ENDIF
			ENDIF

		ELSEIF RESULT == 雄性 || RESULT == ふたなり
			調教対象 = GETVAR(@"%対面者%_戦場:对方卡片")
			CALL CARD_EROTICS(調教対象)
			IF RESULT != -1
				調教対象 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 兰卡吻上了%CALLNAME:調教対象%的嘴唇，股间不断来回刺激着%CALLNAME:調教対象%的肉棒。
				RESETCOLOR
				CALL EROTIC_MOVE("全身愛撫",調教対象,NO_TO_CHARANUM(1376))
			ENDIF
			CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",对方卡片,"永攻DOWN",800)
			
		ELSE
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",对方卡片,"永攻DOWN",800)
		ENDIF
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"表",2,1)
	ENDIF

ELSEIF 種類 == 攻撃時強制誘発
	CALL FULLRESET
	IF RESULT == 0
		IF 戦闘場所(決闘者,1) != 5
			CALL CARD_EROTICS(戦闘カードID(決闘者,1))
			IF RESULT != 0
				調教対象 = RESULT
			ENDIF
		ENDIF
		IF 調教対象 > 0
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML 催淫气体干扰着%CALLNAME:調教対象%的意识,四肢被兰卡钳制住。
			RESETCOLOR
		ENDIF		
	ENDIF		

ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"罠耐")
ENDIF
