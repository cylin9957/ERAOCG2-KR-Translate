@CARDCAN_77511(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,77511)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動
	IF ゾーン == "手札"
		SIF ターンプレイヤー != 決闘者
			RETURN 0
	ELSEIF ゾーン == "魔罠"
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 発動済_1(決闘者,77511)
		RETURN 0
	RETURN 1

ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	SIF 発動済_2(決闘者,77511)
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0

	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = 惑乱魔
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0

	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件性別 = 性別在
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_77511(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード1
#DIM DYNAMIC 選択カード2
#DIM DYNAMIC 攻撃力修正1
#DIM DYNAMIC 攻撃力修正2
#DIM DYNAMIC 合计下降攻撃力
#DIM DYNAMIC 原本攻撃力修正3
#DIM DYNAMIC 攻撃力修正3
#DIM DYNAMIC 选择对方卡片
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 选择卡名称
#DIM DYNAMIC 調教対象
#DIM DYNAMIC 調教対象1
#DIM DYNAMIC 調教対象2

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 || 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,77511,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲手札 = 1
		効果条件カテゴリ = 惑乱魔
		効果条件種類 = モン全般
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		IF RESULT != 0
			CALL FULLRESET
			PRINTL 要从手中丢弃1张「惑乱魔」怪兽来发动这张卡吗?
			PRINTL [1] - 是
			PRINTL [2] - 但是我拒绝
			BINPUT
			IF RESULT == 1
				CALL FULLRESET
				効果範囲手札 = 1
				効果条件カテゴリ = 惑乱魔
				効果条件種類 = モン全般
				CALL CARD_ADD_GY_BASIC(決闘者,"手札",ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					効果範囲デッキ = 1
					効果条件性別 = 性別在
					効果追加種類 = 22
					CALL CARD_SP_SUMMON_ADV(対面者,ゾーン,場所)
					IF RESULT == 1
						CALL FULLRESET
						効果条件種類 = 通常罠
						効果条件カテゴリ:0 = 落とし穴
						効果条件カテゴリ:1 = 蜜穴
						CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
					ENDIF
				ELSE
					CALL FULLRESET
					効果範囲デッキ = 1
					効果条件性別 = 性別在
					効果条件種類 = モン全般
					CALL CARD_SP_SUMMON_ADV(対面者,ゾーン,場所)
					IF RESULT == 1
						CALL FULLRESET
						効果条件種類 = 通常罠
						効果条件カテゴリ:0 = 落とし穴
						効果条件カテゴリ:1 = 蜜穴
						CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
					ENDIF
				ENDIF
			ELSE
				CALL FULLRESET
				効果範囲デッキ = 1
				効果条件性別 = 性別在
				効果条件種類 = モン全般
				CALL CARD_SP_SUMMON_ADV(対面者,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					効果条件種類 = 通常罠
					効果条件カテゴリ:0 = 落とし穴
					効果条件カテゴリ:1 = 蜜穴
					CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
				ENDIF
			ENDIF
		ELSE
			CALL FULLRESET
			効果範囲デッキ = 1
			効果条件性別 = 性別在
			効果条件種類 = モン全般
			CALL CARD_SP_SUMMON_ADV(対面者,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				効果条件種類 = 通常罠
				効果条件カテゴリ:0 = 落とし穴
				効果条件カテゴリ:1 = 蜜穴
				CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 種類 == 墓地起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,77511,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果条件カテゴリ = 惑乱魔
		CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
		選択カード1 = RESULT
		IF 選択カード1 != 9999
			攻撃力修正1 = GETVAR(@"%決闘者%_MZ_攻:選択カード1")
			TRYCALLFORM CARDNAME_{GETVAR(@"%決闘者%_戦場:選択カード1")}, "名前"
			选择卡名称 = %RESULTS%
			CALL FULLRESET
			効果条件カテゴリ = 惑乱魔
			効果条件固名前 = %选择卡名称%
			CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
			選択カード2 = RESULT
			IF 選択カード2 != 9999
				攻撃力修正2 = GETVAR(@"%決闘者%_MZ_攻:選択カード2")
				合计下降攻撃力 = 攻撃力修正1 + 攻撃力修正2
				CALL FULLRESET
				効果条件性別 = 性別在
				CALL CARD_CHOOSE_BASIC(決闘者,"相手戦場",ゾーン,場所)
				选择对方卡片 = RESULT
				IF 选择对方卡片 != 9999
					攻撃力修正3 = GETVAR(@"%対面者%_MZ_攻:选择对方卡片")

					TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_戦場:选择对方卡片")}("名前")
                	調教対象 = GETVAR(@"%対面者%_戦場:选择对方卡片")
					TRYCALLFORM CARD_{GETVAR(@"%対面者%_戦場:选择对方卡片")}, "性別"
					IF RESULT == 牝性 && 攻撃力修正3 - 合计下降攻撃力 <= 0
						CALL FULLRESET
						PRINTL 选择的怪兽攻撃力降至了0,要将其替换为「惑乱魔的宠物」吗?
						PRINTL [1] - 是
						PRINTL [2] - 但是我拒绝
						BINPUT
						IF RESULT == 1
							CALL CARD_EROTICS(調教対象)
							IF RESULT != -1
								調教対象 = RESULT
								SETCOLOR C_PINK
								PRINTFORML
								PRINTFORMW 惑乱魔们刺激着%CALLNAME:調教対象%的性器，又在%CALLNAME:調教対象%即将高潮之际突然停止……！
								PRINTFORMW 直到彻底屈服于惑乱魔的一刻,%CALLNAME:調教対象%才从残酷的寸止调教中迎来片刻喘息。
								PRINTFORML
								RESETCOLOR
								CALL EROTIC_MOVE("調教部屋",調教対象, -1,100)
								CALL TOKEN_TRAPSEX(決闘者,选择对方卡片)
							ENDIF
						ENDIF
					ELSEIF RESULT == ふたなり || RESULT == 雄性 ;&& (GETVAR(@"%対面者%_MZ_攻:选择对方卡片") - 合计下降攻撃力) > 0
						CALL CARD_EROTICS(GETVAR(@"%決闘者%_戦場:選択カード1"))
						調教対象1 = RESULT
						CALL CARD_EROTICS(GETVAR(@"%決闘者%_戦場:選択カード2"))
						調教対象2 = RESULT

						IF 調教対象1 >= 0
							CALL CARD_EQUIP_MONSTER(対面者,选择对方卡片,"相手戦場",選択カード1,(1 + 2))
							CALL CARD_EQUIP_MONSTER(対面者,选择对方卡片,"相手戦場",選択カード2,(1 + 2))
							SETCOLOR C_PINK
							PRINTFORML
							PRINTFORMW %CALLNAME:調教対象1%和%CALLNAME:調教対象2%误判了猎物的实力,反而被对手捕获了……！
							PRINTFORMW %CALLNAME:調教対象1%被当作肉铠固定在对方的肉棒上，%CALLNAME:調教対象2%则被捆绑好拎在手中。
							PRINTFORML
							RESETCOLOR
							CALL EROTIC_MOVE("前穴凌辱",調教対象1,-1,100)
							CALL EROTIC_MOVE("拘束晒し",調教対象2,-1,100)
						ENDIF
					ELSE
						CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",选择对方卡片,"永攻DOWN",77511,合计下降攻撃力)
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
	


