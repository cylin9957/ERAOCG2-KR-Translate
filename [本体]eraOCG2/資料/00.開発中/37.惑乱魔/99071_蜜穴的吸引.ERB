@CARDCAN_99071(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 效果限制达成
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,99071)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == フリー誘発
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
		RETURN 0

	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	効果範囲相手戦場 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1     
    
ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
		
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果範囲相手戦場 = 1
	効果範囲相手魔罠 = 1
	効果条件カテゴリ = 蜜罐
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
    SIF RESULT != 1
		RETURN 0
    RETURN 1
ENDIF

@CARDEFFECT_99071(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 选择对方卡片
#DIM DYNAMIC 調教対象
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 守備力修正

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,99071)
	IF RESULT == 0
        CALL CARD_DISPOSE(決闘者,ゾーン,場所)
        CALL FULLRESET
        効果範囲戦場 = 1
        効果条件カテゴリ = 惑乱魔
        CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
        選択カード = RESULT
        IF 選択カード != 9999
        	攻撃力修正 = GETVAR(@"%決闘者%_MZ_守:選択カード")
        	CALL FULLRESET
            効果範囲相手戦場 = 1
            CALL CARD_CHOOSE_BASIC(決闘者,"相手戦場",ゾーン,場所)
            选择对方卡片 = RESULT
            IF 选择对方卡片 != 9999
            	CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",选择对方卡片,"永攻DOWN",99071,攻撃力修正)
                TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_戦場:选择对方卡片")}("名前")
                調教対象 = GETVAR(@"%対面者%_戦場:选择对方卡片")
				TRYCALLFORM CARD_{GETVAR(@"%対面者%_戦場:选择对方卡片")}, "性別"
                IF RESULT == 牝性 || RESULT == ふたなり || RESULT == 雄性 ;&& (GETVAR(@"%対面者%_MZ_攻:选择对方卡片") - 攻撃力修正) <= 0
                	CALL FULLRESET
					PRINTL 选择的怪兽攻撃力降至了0,要让那只怪兽作为「蜜罐」在对方魔罠区放置吗?
					PRINTL [1] - 是
					PRINTL [2] - 但是我拒绝
					BINPUT
					IF RESULT == 1
                		効果追加カテ = 蜜罐
                		CALL CARD_ADD(対面者,"戦場","魔罠",选择对方卡片,"表側表示")
                
                    	CALL CARD_EROTICS(調教対象)
                    	IF RESULT != -1
                        	調教対象 = RESULT
                        	SETCOLOR C_PINK
                        	PRINTFORML
                        	PRINTFORMW %CALLNAME:調教対象%在惑乱魔的调教下屈服了,被改造成了生产"花蜜"的蜜罐……！
                        	PRINTFORML
                        	RESETCOLOR
                        	CALL EROTIC_MOVE("苗床捕縛",調教対象, -1, 100)
                    	ENDIF
					ELSE
						CALL CARD_EROTICS(調教対象)
						IF RESULT != -1
							調教対象 = RESULT
							SETCOLOR C_PINK
							PRINTFORML
							PRINTFORMW %CALLNAME:調教対象%的力量在调教中被惑乱魔吸走了！
							PRINTFORML
							RESETCOLOR
							CALL EROTIC_MOVE("全身レズ愛撫",調教対象, -1, 50)
						ENDIF
					ENDIF
                ELSEIF (GETVAR(@"%対面者%_MZ_攻:选择对方卡片") - 攻撃力修正) <= 0
					CALL FULLRESET
					CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",選択カード,"墓地",99071)
                ENDIF
            ENDIF
        ENDIF
    ENDIF

ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,99071)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
    	CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果範囲相手戦場 = 1
		効果範囲相手魔罠 = 1
		効果条件カテゴリ = 蜜罐
		CALL CARD_CHOOSE_BASIC(決闘者,"对方魔罠",ゾーン,場所)
		选择对方卡片 = RESULT
		IF 选择对方卡片 != 9999
			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件カテゴリ = 惑乱魔
			CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_魔罠:选择对方卡片")}("名前")
				調教対象 = GETVAR(@"%対面者%_魔罠:选择对方卡片")
				CALL CARD_EROTICS(調教対象)
				IF RESULT != -1
					調教対象 = RESULT
					SETCOLOR C_PINK
					PRINTFORML
					PRINTFORMW 惑乱魔从%CALLNAME:調教対象%的股间汲取了花蜜,体力得到了补充。
					PRINTFORML
					RESETCOLOR
					CALL EROTIC_MOVE("指入れ",調教対象, -1, 300)
				ENDIF
				CALL STATCHANGE_EFFECT(決闘者,"自身",選択カード,"戦耐",1)
			ENDIF
		ENDIF
    ENDIF
ENDIF