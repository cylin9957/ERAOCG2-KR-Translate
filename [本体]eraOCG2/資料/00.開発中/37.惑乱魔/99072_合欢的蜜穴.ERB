@CARDCAN_99072(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 效果限制达成
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,99072)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == フリー誘発
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF 発動済_1(決闘者,99072)
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
		RETURN 0

	;自己戦場没有蟲惑魔，达成
	CALL FULLRESET
	効果範囲戦場 = 1
    効果条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
    SIF RESULT == 0
		条件達成++
		
	;全场蜜罐数量等于0,达成
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果範囲相手戦場 = 1
	効果範囲相手魔罠 = 1
	効果条件カテゴリ = 蜜罐
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
    SIF RESULT == 0
		条件達成++
	;如果自己戦場没有蟲惑魔的条件或全场蜜罐数量等于0的条件有任意一方达成或同时达成,返回0
	SIF 条件達成 != 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_99072(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 特招エクシーズ怪兽
#DIM DYNAMIC エクシーズ素材増加
#DIM DYNAMIC 选择リンク怪兽
#DIM DYNAMIC 选择リンク怪兽_ID
#DIM DYNAMIC リンク值
#DIM DYNAMIC 选择リンク素材
#DIM DYNAMIC 調教対象
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,99072,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		PRINTL 要特殊召唤哪种怪兽？
		PRINTL [1] - エクシーズ怪兽
		PRINTL [2] - リンク怪兽
		PRINTL [100] - 放弃
		BINPUT
		IF RESULT == 1
			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件カテゴリ = 惑乱魔
			効果条件行先フラグ = 墓地行き
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			SIF RESULT == 1
				条件達成++

			REPEAT 2
				CALL CARD_LOADUP

				CALL FULLRESET
				効果範囲戦場 = 1
				効果範囲魔罠 = 1
				効果範囲相手戦場 = 1
				効果範囲相手魔罠 = 1
				効果条件カテゴリ = 蜜罐
				CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
				SIF RESULT == 0
					BREAK

				CALL FULLRESET
				効果範囲戦場 = 1
				効果範囲魔罠 = 1
				効果範囲相手戦場 = 1
				効果範囲相手魔罠 = 1
				効果条件カテゴリ = 蜜罐
				効果条件行先フラグ = 墓地行き
				CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
				SIF RESULT == 1
					条件達成++
					
				IF 条件達成 != 3
					CALL FULLRESET
					SETCOLOR C_YELLOW
					PRINTFORML 
					PRINTFORML 要继续选择卡送去墓地吗?当前已送去墓地的「惑乱魔」怪兽与「蜜罐」数量为{COUNT+2}
					PRINTFORML 
					RESETCOLOR
					PRINTL [1] - 是
					PRINTL [2] - 但是我拒绝
					BINPUT
					SIF RESULT == 2
						BREAK
				ELSE
					SETCOLOR C_YELLOW
					PRINTFORML 
					PRINTFORML 已送去墓地的「惑乱魔」怪兽与「蜜罐」数量达到最大值3
					PRINTFORML 
					RESETCOLOR
				ENDIF
			REND
			エクシーズ素材増加 = 条件達成 - 1

			IF 条件達成 <= 1
				CALL FULLRESET
				効果範囲EXデッキ = 1
				効果条件カテゴリ = 惑乱魔
				効果条件種類 = エクシーズ
				効果追加種類:0 = 1
				効果追加種類:1 = 8
				効果追加種類:2 = 190
				効果追加種類:3 = 40000 + エクシーズ素材増加
				CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所,"攻撃表示")
			ELSEIF 条件達成 >= 2
				CALL FULLRESET
				効果範囲EXデッキ = 1
				効果条件カテゴリ = 惑乱魔
				効果条件種類 = エクシーズ
				効果追加種類:3 = 40000 + エクシーズ素材増加
				CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
			ENDIF
		
		ELSEIF RESULT == 2
			CALL FULLRESET
			PRINTL 要召唤リンク数为多少的怪兽？
			PRINTL [1] - 1
			PRINTL [2] - 2
			PRINTL [3] - 3
			BINPUT
			リンク值 = RESULT

			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件カテゴリ = 惑乱魔
			効果条件行先フラグ = 墓地行き
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			SIF RESULT == 1
				条件達成++

			REPEAT リンク值 - 1
				CALL CARD_LOADUP

				CALL FULLRESET
				効果範囲戦場 = 1
				効果範囲魔罠 = 1
				効果範囲相手戦場 = 1
				効果範囲相手魔罠 = 1
				効果条件カテゴリ = 蜜罐
				CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
				SIF RESULT == 0
					BREAK

				CALL FULLRESET
				効果範囲戦場 = 1
				効果範囲魔罠 = 1
				効果範囲相手戦場 = 1
				効果範囲相手魔罠 = 1
				効果条件カテゴリ = 蜜罐
				効果条件行先フラグ = 墓地行き
				CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
				SIF RESULT == 1
					条件達成++

				SETCOLOR C_YELLOW
				PRINTFORML 
				PRINTFORML 当前已经选择送去墓地的「惑乱魔」怪兽与「蜜罐」数量为{COUNT+2}
				PRINTFORML 
				RESETCOLOR
			REND
			选择リンク素材 = 条件達成

			IF 选择リンク素材 < リンク值
				CALL FULLRESET
				効果範囲EXデッキ = 1
				効果条件カテゴリ = 惑乱魔
				効果条件種類 = リンク
				効果条件レベル = リンク值
				効果追加種類:0 = 1
				効果追加種類:1 = 8
				効果追加種類:2 = 190
				CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,选择リンク怪兽,"攻撃表示")
			ELSEIF 选择リンク素材 == リンク值
				CALL FULLRESET
				効果範囲EXデッキ = 1
				効果条件カテゴリ = 惑乱魔
				効果条件種類 = リンク
				効果条件レベル = リンク值
				CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,选择リンク怪兽)
			ENDIF
		ELSE
			PRINTFORMW 就算这么说，用掉的卡也不会给你盖回去。
		ENDIF
    ENDIF
ENDIF