		RESULTS = ウィッチクラフト·進化融合
	CASE "略称"
		RESULTS = WC·進化融合
	CASE "カテゴリ"
		RESULTS:0 = ウィッチクラフト
		RESULTS:1 = 融合
		RESULTS:2 = ゲームオリジナル
ENDSELECT


@CARD_62049(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"

		RETURN 通常魔法
	CASE "生産不可"
		RETURN 1
ENDSELECT
RETURN 0

