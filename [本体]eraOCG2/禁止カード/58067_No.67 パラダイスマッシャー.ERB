@CARDCAN_58067(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,58067)
SIF RESULT == 1
	RETURN 0

IF 種類 == 戦場起動
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF メインフェイズ２ == 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58067(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ダイス目
#DIM DYNAMIC 条件達成
#DIM DYNAMIC ダイス合計,2

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,58067,10,X消費2)
	IF RESULT == 0
		SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") >= 0
			条件達成 = 1
		REPEAT 2
			CALL DICE_ROLL(決闘者,1)
			ダイス目 = RESULT
			IF 条件達成 == 1
				IF 決闘者 == "自分"
					PRINTL 出目を７にしますか？
					CALL YN_CHOICE(決闘者)
					IF RESULT == 0
						CALL DICE_ROLL_7(ダイス目)
						ダイス目 = 7
					ENDIF
				ENDIF
			ENDIF
			ダイス合計:0 += ダイス目
		REND

		REPEAT 2
			CALL DICE_ROLL(対面者,1)
			ダイス目 = RESULT
			IF 条件達成 == 1
				IF 決闘者 == "自分"
					PRINTL 出目を７にしますか？
					CALL YN_CHOICE(決闘者)
					IF RESULT == 0
						CALL DICE_ROLL_7(ダイス目)
						ダイス目 = 7
					ENDIF

				ELSEIF 決闘者 != "自分" && RESULT < 5
					ダイス目 = 7
				ENDIF
			ENDIF
			ダイス合計:1 += ダイス目
		REND

		PRINTFORMW %決闘者%：{ダイス合計:0}　　ＶＳ　　%対面者%：{:ダイス合計:1}

		IF ダイス合計:0 > ダイス合計:1
			PRINTFORMW %対面者%の勝ち！
			CALL SET_PLAYER_INFO(決闘者,"モン効果無効",4)
			CALL SET_PLAYER_INFO(決闘者,"バトルスキップ",1)
		ELSEIF ダイス合計:0 < ダイス合計:1
			PRINTFORMW %決闘者%の勝ち！
			CALL SET_PLAYER_INFO(決闘者,"モン効果無効",4,1)
			CALL SET_PLAYER_INFO(決闘者,"バトルスキップ",1,1)
		ELSE
			PRINTW 引き分け！
		ENDIF
	ENDIF
ENDIF

