@CARDCAN_60002(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,60002)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF



@CARDEFFECT_60002(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 手札数保存

IF 種類 == 魔罠起動 || 種類 == 手札起動
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,60002)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		手札数保存 = 手札数(決闘者)
		CALL CARDDRAW_BASIC(決闘者,3)
		SIF 手札数保存 == 手札数(決闘者)
			RETURN 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果条件複数 = 3
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF
