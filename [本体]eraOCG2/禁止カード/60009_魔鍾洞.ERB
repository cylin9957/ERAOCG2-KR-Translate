	CASE "名前"
		RESULTS = 魔鍾洞
	CASE "略称"
		RESULTS = 魔鍾洞
	CASE "カテゴリ"
		RESULTS:0 = なし
ENDSELECT


@CARD_60009(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN フィールド
	CASE "制限"
		RETURN 制限
	CASE "レア度"
		RETURN ULR
ENDSELECT

