@CARDCAN_60006(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件達成

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,60006)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF 発動済_1(60006)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1

ELSEIF 種類 == 効後紋章起動
	SIF 発動済_1(60006) == 0
		RETURN 0
	CALL FULLRESET
	効果条件種類 = モン全般
	CALL CARD_CHECK_FIN_DATA(決闘者,"リリース")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件攻撃力 = 1500
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_60006(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

IF 種類 == 魔罠起動 || 種類 == 手札起動
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,60006,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		IF 発動済_D1(決闘者,60006) == 0
			CALL CARD_EFFECT_USE(決闘者,60006,20)
			CALL CARD_RESERV(決闘者,44402,効後紋章予約)
		ELSE
			PRINTW 「遺言状」の効果がセットされました（ターン終了時まで継続）
		ENDIF
	ENDIF

ELSEIF 種類 == 効後紋章起動
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件攻撃力 = 1500
	効果条件任意 = 1
	CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
ENDIF
